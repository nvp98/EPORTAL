@{ Layout = null;}
@model EPORTAL.Models.LoginValidation
@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <div class="modal-dialog" role="document" style="max-width:1000px">
        <div class="modal-content">
            <div class="modal-header">
                <h5 id="ModalTitle">Thay đổi thông tin</h5>
                <a href="#" class="close" data-dismiss="modal">&times;</a>
            </div>
            <div class="modal-body">

                @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                @Html.HiddenFor(model => model.ID)
                <fieldset id="SubmitForm">
                    <div class="form-row">
                        <div class="form-group col-md-12">
                            <label class="small mb-1" for="inputLastName">MaNV</label>
                            @Html.EditorFor(model => model.MaNV, new { htmlAttributes = new { @class = "form-control", @readonly = "readonly", @id = "TenDangNhap" } })
                            @Html.ValidationMessageFor(model => model.MaNV, "", new { @class = "text-danger" })
                        </div>
                    </div>
                    <div class="form-row">
                        <div class="form-group col-md-12">
                            <label class="small mb-1" for="inputLastName">Họ tên</label>
                            @Html.EditorFor(model => model.HoTen, new { htmlAttributes = new { @class = "form-control", @readonly = "readonly", @id = "HoTen" } })
                            @Html.ValidationMessageFor(model => model.HoTen, "", new { @class = "text-danger" })
                        </div>
                    </div>

                    <div class="form-row">
                        <div class="form-group col-md-12">
                            <label class="small mb-1" for="inputLastName">Quyền</label>
                            @Html.DropDownListFor(model => model.IDQuyenHT, ViewBag.PList as SelectList, "--Chọn quyền--", new { @id = "IDQuyenHT", @class = "form-control" })
                        </div>
                    </div>
                    <div class="col-md-12 mb-2">
                        <div class=" form-group text-xl-left font-weight-bold">
                            <div class="font-weight-bold text-left">Group Quyền</div>
                            @for (int i = 0; i < Model.LSChecked.Count; i++)
                            {
                                <div class="col-md-3 font-weight-bold float-left text-left">
                                    @Html.CheckBoxFor(m => Model.LSChecked[i].isChecked)
                                    @Html.HiddenFor(m => Model.LSChecked[i].IDCN)
                                    @Model.LSChecked[i].Name
                                </div>
                            }
                        </div>
                    </div>
