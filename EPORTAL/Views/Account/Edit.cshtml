            <div class="form-group col-md-12">
                <label class="small mb-1">Nhập quyền QLNT</label>
                @Html.DropDownListFor(model => model.NT_Permission, ViewBag.IDQuyenNT as SelectList, "--Chọn Quyền đăng nhập--", new { @id = "NT_Permission", @class = "form-control" })
                @Html.ValidationMessageFor(model => model.NT_Permission, "", new { @class = "text-danger" })
            </div>
        </div>*@
                <div class="row w-100">
                    <div class="form-group col-md-12">
                        <button class="btn btn-primary pull-right" id="btncreate"><i class="fa fa-check-circle"></i> Cập nhật</button>
                    </div>
                </div>
                </fieldset>

            </div>
        </div>
    </div>

}
