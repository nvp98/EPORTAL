@model EPORTAL.Models.EmployeesInfo
<script src="~/Scripts/jquery.validate.min.js"></script>
<script src="~/Scripts/jquery.validate.unobtrusive.min.js"></script>
@using (Html.BeginForm("Create", "DeclarationInfo", FormMethod.Post, new { enctype = "multipart/form-data" }))
{
    @Html.AntiForgeryToken()
    <div class="modal-dialog" id="form">
        <div class="modal-content">
            <div class="modal-header">
                <h5 id="ModalTitle"></h5>
                <a href="#" class="close" data-dismiss="modal">&times;</a>
            </div>
            <div class="modal-body">


                @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                <fieldset id="SubmitForm">
                    <div class="row">

                        <div class="col-md-6">
                            <div class="form-group">
                                <label class="small mb-1">Mã Nhân Viên</label>
                                @Html.DropDownListFor(model => model.MaNV, ViewBag.MaNVList as SelectList, new { @class = "form-control", @id = "MaNV", @readonly = "true" })

                            </div>
                        </div>

                        <div class="col-md-6">
                            <div class="form-group">
                                <label class="small mb-1">Họ và Tên</label>
                                @Html.DropDownListFor(model => model.HoTen, ViewBag.HoTenNVList as SelectList, new { @class = "form-control", @id = "HoTen", @readonly = "true" })

                            </div>
                        </div>

                        <div class="col-md-6">
                            <div class="form-group">
                                <label class="small mb-1">CMND/ Hộ chiếu</label><span style="color:red">*</span>
                                @Html.EditorFor(model => model.CMND, new { htmlAttributes = new { @class = "form-control", placeholder = "CMND", @id = "CMND" } })
                                @Html.ValidationMessageFor(model => model.CMND, "", new { @class = "text-danger" })

                            </div>
                        </div>

                        <div class="col-md-6">
                            <div class="form-group">
                                <label class="small mb-1">CCCD/ Mã đinh danh</label><span style="color:red">*</span>
                                @Html.EditorFor(model => model.CCCD, new { htmlAttributes = new { @class = "form-control", placeholder = "CCCD", @id = "CCCD" } })
                                @Html.ValidationMessageFor(model => model.CCCD, "", new { @class = "text-danger" })

                            </div>
                        </div>




                        @*<div class="col-md-6">
                                <div class="form-group">
                                    <div class="row">
                                        <label class="small mb-1">Logo</label>

                                        @Html.EditorFor(model => model.ImageFile, new { htmlAttributes = new { @class = "form-control", placeholder = "", @id = "ImageFile", @readonly = "true" } })
                                        <div class="col-md-12">
                                            <input type="file" name="ImageFile" style="width:100%;" />
                                        </div>
                                    </div>
                                </div>
                            </div>*@

                        <div class="col-md-12">
                            <div class="form-group">
                                <label class="small mb-1">Hình ảnh (Đính kèm)</label><span style="color:red">*</span>
                                <div class="col-md-10">
                                    <input type="file" name="ImageFile" id="ImageFile" />
                                </div>
                            </div>
                        </div>

                    </div>

                    <div class="btn-margin-top text-center">
                        <input type="submit" value="Xác nhận" class="btn btn-success button_submit" id="btnSubmit" />

                    </div>
                </fieldset>

            </div>
        </div>
    </div>
}


<script>
    $("#btnSubmit").on('click', function () {
        var file = $('#ImageFile').val();
        if (file.length == 0) {
            alert('Vui lòng chọn hình ảnh.');
            return false;
        }
    });
</script>


