                                                    </div>
                                                </div>
                                            </div>
                                            <div class="widget-content-left  ml-3 header-user-info">
                                                <div class="widget-heading">
                                                    @QLDanhBa.Models.MyAuthentication.TenNV
                                                </div>
                                                <div class="widget-subheading">
                                                    @*PNS*@
                                                </div>
                                            </div>
                                            <div class="widget-content-right header-user-info ml-3">

                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        }
                        else if (QLDanhBa.Models.MyAuthentication2.IDQuyen == 3)
                        {
                            <div class="app-header-right">
                                <div class="header-btn-lg pr-0">
                                    <div class="widget-content p-0">
                                        <div class="widget-content-wrapper">
                                            <div class="widget-content-left">
                                                <div class="btn-group">
                                                    <a data-toggle="dropdown" aria-haspopup="true" aria-expanded="false" class="p-0 btn">
                                                        <img width="42" class="rounded-circle" src="~/Content/assets/images/avatars/adminlogo.jpg" alt="">
                                                        <i class="fa fa-angle-down ml-2 opacity-8"></i>
                                                    </a>
                                                    <div tabindex="-1" role="menu" aria-hidden="true" class="dropdown-menu dropdown-menu-right">
                                                        <a class="dropdown-item" href="@Url.Action("Logout","Login")">Đăng xuất</a>
                                                        <a class="dropdown-item" href="@Url.Action("ChangePassword","Login")">Đổi mật khẩu</a>
                                                        @*<button type="button" tabindex="0" class="dropdown-item">Đăng xuất</button>*@
                                                        @*<button type="button" tabindex="0" class="dropdown-item">Settings</button>*@

                                                    </div>
                                                </div>
                                            </div>
                                            <div class="widget-content-left  ml-3 header-user-info">
                                                <div class="widget-heading">
                                                    @QLDanhBa.Models.MyAuthentication2.ShortName
                                                </div>
                                                <div class="widget-subheading">
                                                    @*PNS*@
                                                </div>
                                            </div>
                                            <div class="widget-content-right header-user-info ml-3">

                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        }
                    }
                </div>
            </div>
        </nav>


        <div class="body_content">
            @RenderBody()
        </div>

        <footer>
            <div class="footer_content d-flex justify-content-between">
                <div class="footer_item web_name">
                    <span>Công ty Cổ phần thép Hòa Phát Dung Quất</span>
                </div>
                <div class="footer_list_item flex-fill web_menu">
                    <ul class="d-flex justify-content-center">
                        <li class="nav-item">
                            <a class="nav-link active" aria-current="page" href="@Url.Action("Index","HomePage")">Trang Chủ</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link active" aria-current="page" href="@Url.Action("IntroduceHPDQ","HomePage")">Giới Thiệu</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link active" aria-current="page" href="@Url.Action("News","HomePage")">Tin Tức</a>
                        </li>

                    </ul>
                </div>
                <div class="footer_item_copy d-flex">
                    <span class="copyright">Copyright</span>
                    <ul class="copyright_ul">
                        <li>Ban công nghệ thông tin</li>
                        <li>Hóa Phát Dung Quất</li>
                    </ul>
                </div>
            </div>

        </footer>


    </div>

    <script>

    </script>
</body>

</html>

