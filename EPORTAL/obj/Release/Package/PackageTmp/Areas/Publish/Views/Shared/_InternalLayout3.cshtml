<!DOCTYPE html>

<html>
<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <link rel="stylesheet" href="~/Layout/css/style_home.css" />
    <link rel="stylesheet" href="~/Content/assets/css/style_dashboard1.css" />
    <link rel="stylesheet" href="~/Content/assets/css/responsive.css" />
    <link href="~/Content/assets/font-awesome/css/font-awesome.min.css" rel="stylesheet" />
    <script src="~/Content/jquery-3.0.0.min.js"></script>
    <script src="~/Content/bootstrap.min.js"></script>
    <link rel="stylesheet" href="~/Content/assets/css/reset.css" />
    <script src="~/Layout/js/plugins/bootstrap.bundle.min.js"></script>
    <link href="~/Content/main1.css" rel="stylesheet" />



</head>
<body>
    @{
        if (!User.Identity.IsAuthenticated)
        {
            Response.Redirect("~/Login");
        }
    }
    <div class="main_wrap">
        <nav class="navbar navbar-expand-lg navbar-light">
            <div class="container-fluid">
                <a class="navbar-brand" href="@Url.Action("Index","HomePage")">
                    <img src="~/Content/assets/images/LogoHPDQ.svg" alt="" height="35">
                </a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse"
                        data-bs-target="#navbarSupportedContent" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="collapse navbar-collapse" id="navbarSupportedContent">
                    <ul class="navbar-nav me-auto mb-2 mb-lg-0 d-flex justify-content-end">
                        @if (User.Identity.IsAuthenticated)
                        {
                            if (QLDanhBa.Models.MyAuthentication.IDQuyen == 1)
                            {
                                <li class="nav-item">
                                    <a class="nav-link active" aria-current="page" href="@Url.Action("Index","HomePage")">Trang Chủ</a>
                                </li>

                                <li class="nav-item">
                                    <a class="nav-link active" aria-current="page" href="@Url.Action("IntroduceHPDQ","HomePage")">Giới Thiệu</a>
                                </li>


                                <li class="nav-item">
                                    <a class="nav-link active" aria-current="page" href="@Url.Action("News","HomePage")">Tin Tức</a>
                                </li>

                                <li class="nav-item">
                                    <a class="nav-link active" aria-current="page" href="@Url.Action("Index","ListPartner")">Đối Tác</a>
                                </li>
                                <li class="nav-item">
                                    <a class="nav-link active" aria-current="page" href="@Url.Action("Index","Complain")">Khiếu Nại</a>
                                </li>
                                <li class="nav-item">
                                    <a class="nav-link active" aria-current="page" href="@Url.Action("Index","Notify")">Thông Báo</a>
                                </li>

                                <li class="nav-item">
                                    <a class="nav-link active" aria-current="page" href="@Url.Action("Index","StatisticPage")">Quản Lý Danh Bạ Đối Tác</a>
                                </li>

                            }
                            else if (QLDanhBa.Models.MyAuthentication.IDQuyen == 2)
                            {
                                <li class="nav-item">
                                    <a class="nav-link active" aria-current="page" href="@Url.Action("Index","HomePage")">Trang Chủ</a>
                                </li>

                                <li class="nav-item">
                                    <a class="nav-link active" aria-current="page" href="@Url.Action("IntroduceHPDQ","HomePage")">Giới Thiệu</a>
                                </li>


                                <li class="nav-item">
                                    <a class="nav-link active" aria-current="page" href="@Url.Action("News","HomePage")">Tin Tức</a>
                                </li>
                                <li class="nav-item">
                                    <a class="nav-link active" aria-current="page" href="@Url.Action("Index","ListPartner")">Đối Tác</a>
                                </li>
                                <li class="nav-item">
                                    <a class="nav-link active" aria-current="page" href="@Url.Action("Index","StatisticPage")">Quản Lý Danh Bạ Đối Tác</a>
                                </li>

                            }
                            else if (QLDanhBa.Models.MyAuthentication2.IDQuyen == 3)
                            {
                                <li class="nav-item">
                                    <a class="nav-link active" aria-current="page" href="@Url.Action("Index","HomePage")">Trang Chủ</a>
                                </li>

                                <li class="nav-item">
                                    <a class="nav-link active" aria-current="page" href="@Url.Action("IntroduceHPDQ","HomePage")">Giới Thiệu</a>
                                </li>


                                <li class="nav-item">
                                    <a class="nav-link active" aria-current="page" href="@Url.Action("News","HomePage")">Tin Tức</a>
                                </li>

                                <li class="nav-item">
                                    <a class="nav-link active" aria-current="page" href="@Url.Action("Index","Complain")">Khiếu Nại</a>
                                </li>
                                <li class="nav-item">
                                    <a class="nav-link active" aria-current="page" href="@Url.Action("Index","Notify")">Thông Báo</a>
                                </li>
                            }
                        }
                    </ul>
                    @if (User.Identity.IsAuthenticated)
                    {
                        if (QLDanhBa.Models.MyAuthentication.IDQuyen == 1 || QLDanhBa.Models.MyAuthentication.IDQuyen == 2)
                        {
                            <div class="app-header-right">
                                <div class="header-btn-lg pr-0">
                                    <div class="widget-content p-0">
                                        <div class="widget-content-wrapper">
                                            <div class="widget-content-left">
                                                <div class="btn-group">
                                                    <a data-toggle="dropdown" aria-haspopup="true" aria-expanded="false" class="p-0 btn">
                                                        <img width="42" class="rounded-circle" src="~/Content/assets/images/avatars/adminlogo.jpg" alt="">
                                                        <i class="fa fa-angle-down ml-2 opacity-8"></i>
                                                    </a>
                                                    <div tabindex="-1" role="menu" aria-hidden="true" class="dropdown-menu dropdown-menu-right">
                                                        <a class="dropdown-item" href="@Url.Action("Logout","Login")">Đăng xuất</a>
                                                        <a class="dropdown-item" href="@Url.Action("ChangePassword","Login")">Đổi mật khẩu</a>
                                                        @*<button type="button" tabindex="0" class="dropdown-item">Đăng xuất</button>*@
