
@{
    ViewBag.Title = "Index";
    Layout = "~/Areas/Publish/Views/Shared/_InternalLayout2.cshtml";
}

@using EPORTAL.ModelsDanhBaDoiTac
@model PagedList.IPagedList<NotifyValidation>
@using PagedList.Mvc

<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <title>Thông báo</title>


    <link href="~/Layout/css/plugins/bootstrap.min.css" rel="stylesheet">
    <link rel="stylesheet" href="~/Areas/Publish/Layout/css/plugins/splide.min.css" />
    <link rel="stylesheet" href="~/Areas/Publish/Layout/css/reset.css" />

    <link rel="stylesheet" href="~/Areas/Publish/Layout/css/style_home.css" />
    @*<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@4.6.1/dist/css/bootstrap.min.css">*@

    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css">


</head>

<body>

    <div class="main_wrap">


        <!-- Breakcrum -->
        <!-- Main content -->
        <div class="d_content s_main-content">
            <div class="card">
                <ul class="nav nav-tabs s_main_tab" id="myTab" role="tablist">
                    <li class="nav-item" role="presentation">
                        <button class="nav-link active " id="notify-tab" data-bs-toggle="tab" data-bs-target="#notify" type="button" role="tab" aria-controls="notify" aria-selected="true">
                            Thông báo
                        </button>
                    </li>


                </ul>
                <div class="tab-content" id="myTabContent">

                    <div class="tab-pane fade show active s_notify_content" id="notify" role="tabpanel" aria-labelledby="notify-tab">

                        @{
                            int pageno = (int)Model.PageNumber;
                            int itemperpage = (int)Model.PageSize;
                            int RowNo = ((pageno - 1) * itemperpage) + 1;
                        }

                        @foreach (var item in Model)
                        {
                            <div class="s_table_notity">
                                <div class="s_row_noti d-flex align-items-center justify-content-between">
                                    <div class="s_name d-flex align-items-center">
                                        <i style="color: red" class="fa fa-file-pdf-o fa-3x" aria-hidden="true"></i>
                                        <a style="text-decoration:none; margin-left:10px" class="name-file" href="@item.FileDinhKem">@item.NoiDungTBao</a>
                                    </div>
                                    <span class="datetime">@item.Ngay.ToString("dd-MM-yyyy")</span>

                                </div>


                            </div>
                            <hr />
                            <br />
                        }
                        <div class="pager d-flex">
                            @Html.PagedListPager(Model, page => Url.Action("Index", "Notify", new { area = "Publish", page }))

                        </div>
                    </div>



                </div>

            </div>






        </div>
    </div>

    <script src="~/Areas/Publish/Layout/js/plugins/jquery.min.js"></script>
    <script src="~/Areas/Publish/Layout/js/plugins/bootstrap.bundle.min.js" type="text/javascript"></script>
    <script>
                window.onload = function () {
                    changelogo();
                };

                window.onresize = function () {
                    changelogo();
                }

                function changelogo() {
                    var w = window.screen.width;
                    if (w < 1200 && w >= 992) {
                        document.getElementById('logo').src = "./images/LogoHPDQ-small.png";
                        document.getElementById('logo').setAttribute('width', '50px');
                    }
                    else {
                        document.getElementById('logo').src = "./images/LogoHPDQ.svg";
                        document.getElementById('logo').setAttribute('width', 'unset');
                    }
                }
    </script>
</body>

<style>
    .s_main-content {
        margin-top: 80px;
        min-height: 825px
    }

    .d-flex {
        justify-content: flex-end
    }

    .tab-content > .active {
        min-height: 700px
    }

    .main_wrap {
        background: whitesmoke;
    }
</style>
