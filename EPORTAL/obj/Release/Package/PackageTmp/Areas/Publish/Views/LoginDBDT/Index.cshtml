
@{
    Layout = null;
}
@model EPORTAL.ModelsDanhBaDoiTac.LoginValidation

<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no" />
    <meta name="description" content="" />
    <meta name="author" content="" />
    <title>Đăng nhập</title>
    <link href="~/Areas/Publish/Content/main.css" rel="stylesheet" />
    <link href="~/Areas/Publish/Content/bootstrap.min.css" rel="stylesheet" />
    <link href="~/Areas/Publish/Content/all.min.css" rel="stylesheet" />
    <link href="~/Areas/Publish/Content/login.css" rel="stylesheet" />
</head>

<body class="bg-login">

    @if (TempData["msg"] != null)
    {
        Html.Raw(TempData["msg"]);
    }
    <div class="container" style="height:100%">
        <div class="main-content">
            <div class="content-centered">

                @*Form Login*@

                <div class="card shadow-lg border-0 rounded-lg" style="">
                    <div class="card-header">
                        <img src="~/Areas/Publish/Content/assets/images/logo-inverse.png" style="width:100%; height:auto; max-width:230px; margin: 0 auto;" />
                    </div>
                    <div class="card-body">

                        <p class="text-center font-weight-light">Danh Bạ Đối Tác</p>

                        @using (Html.BeginForm("LoginUser", "LoginDBDT", new { id = "myForm" }))
                        {
                            <div class="form-group">
                                @*<label class="small mb-1" for="inputEmailAddress">Tài khoản</label>*@
                                @Html.TextBoxFor(m => m.TaiKhoan, new { @class = "form-control", @placeholder = "Tài khoản" })
                                @Html.ValidationMessageFor(m => m.TaiKhoan, "", new { @class = "text-danger" })
                                <div id="show_error_user"></div>
                            </div>
                            <div class="form-group">
                                @*<label class="small mb-1" for="inputPassword">Mật khẩu</label>*@
                                @Html.PasswordFor(m => m.MatKhau, new { @class = "form-control", @placeholder = "Mật khẩu" })
                                @Html.ValidationMessageFor(m => m.MatKhau, "", new { @class = "text-danger" })
                                <div id="show_error_pass"></div>
                            </div>


                            <div class="form-group">
                                <button id="LoginUser" type="submit" class="form-control btn btn-primary submit px-3"><strong>Đăng Nhập</strong></button>
                            </div>

                            <div class="form-group">
                                <div class="custom-control custom-checkbox">
                                    <input class="custom-control-input" id="rememberPasswordCheck" type="checkbox" />
                                    <label class="custom-control-label" for="rememberPasswordCheck">Nhớ tài khoản</label>
                                </div>
                            </div>
                        }

                    </div>
                </div>

                @*End Form Login*@

            </div>
        </div>
        <footer class="">
            <div class="">
                <div class="">
                    <div class="text-c">Copyright &copy; @DateTime.Now.Year Ban Công nghệ thông tin.<br /> Công ty CP Thép Hòa Phát Dung Quất </div>
                </div>
            </div>
        </footer>
    </div>


</body>
</html>

