
@{
    ViewBag.Title = "Index";
    Layout = "~/Areas/Publish/Views/Shared/_Layout.cshtml";
}

@using EPORTAL.ModelsDanhBaDoiTac
@model PagedList.IPagedList<FeildOfWorkValidation>
@using PagedList.Mvc
<link href="~/Content/assets/css/PagedList.css" rel="stylesheet" />

@if (TempData["msgSuccess"] != null)
{
    @Html.Raw(TempData["msgSuccess"])
}
@if (TempData["msgError"] != null)
{
    @Html.Raw(TempData["msgError"])
}



<div class="app-main__outer">
    <div class="app-main__inner">

        <div class="app-page-title">
            <div class="page-title-wrapper">
                <div class="page-title-heading">
                    <div class="page-title-icon">
                        <i class="pe-7s-portfolio icon-gradient bg-grow-early">
                        </i>
                    </div>
                    <div>
                        Quản Lý Lĩnh Vực Hoạt Động
                        <div class="page-title-subheading">
                        </div>
                    </div>
                </div>

            </div>
        </div>

        <div class="tab-content">
            <div class="row">
                <div class="card col-lg-12">
                    <div class="card-header">

                        <div class="m-l-auto">



                            <button type="button" id="btn-add" class="btn btn-primary m-l-auto"><i class="fa fa-plus">&nbsp;</i>&nbsp;Thêm mới </button>
                            <div class="modal fade" id="myModal" role="dialog" data-url='@Url.Action("Create","FeildOfWork")'></div>

                        </div>

                    </div>
                    <div class="card-body">

                        <table class="table table-bordered table-hover" id="table" width="100%" cellpadding="0">
                            <thead class="thead-light">
                                <tr>
                                    <th width="30px" class="text-center">STT</th>
                                    <th width="" class="text-center">Lĩnh Vực Hoạt Động</th>


                                    <th width="80px" class="text-center">Thao tác</th>
                                </tr>
                            </thead>
                            <tbody>
                                @{
                                    int pageno = (int)Model.PageNumber;
                                    int itemperpage = (int)Model.PageSize;
                                    int RowNo = ((pageno - 1) * itemperpage) + 1;
                                }
                                @foreach (var item in Model)
                                {
                                    <tr>
                                        <td class="text-center">@RowNo@{RowNo++;}</td>
                                        <td class="text-center">@item.TenLinhVucHĐ</td>



                                        <td class="text-center">

                                            <a id="btn-edit_@item.IDLinhVuc" title="Sửa" class="fa fa-edit icon_action"></a>
                                            <div class="modal fade" id="myModale_@item.IDLinhVuc" role="dialog" data-url='@Url.Action("Edit","FeildOfWork", new { id = item.IDLinhVuc })'></div>
                                            <script type="text/javascript">
                                                    $("#btn-edit_@item.IDLinhVuc").click(function () {
                                                        var url = $('#myModale_@item.IDLinhVuc').data('url');
                                                        $.get(url, function (data) {
                                                            $("#myModal").html(data);
                                                            $("#ModalTitle").html("Cập nhật Lĩnh Vực Hoạt Động");
                                                            $("#myModal").modal('show');
                                                        });
                                                    });
                                            </script>
                                            <a class="fa fa-trash icon_action" title="Xóa" href="@Url.Action("Delete", "FeildOfWork", new { id = item.IDLinhVuc })"
                                               onclick="return confirm('Bạn muốn xóa Hạng mục: @item.TenLinhVucHĐ')">
                                            </a>
                                        </td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                        <div class="pager">
                            @Html.PagedListPager(Model, page => Url.Action("Index", "FeildOfWork", new { area = "Publish", page }))
                            <span class="pageoff">Trang @(Model.PageCount < Model.PageNumber ? 0 : Model.PageNumber) / @Model.PageCount</span>
                        </div>

                    </div>

                </div>
            </div>
        </div>

    </div>


    <div class="app-wrapper-footer">
        <div class="app-footer">
            <div class="app-footer__inner">
            </div>
        </div>
    </div>


</div>


<script type="text/javascript">


    $('#btn-add').click(function () {
        var url = $('#myModal').data('url');
        $.get(url, function (data) {
            $("#myModal").html(data);
            $("#ModalTitle").html("Thêm mới Lĩnh Vực Hoạt Động");
            $("#myModal").modal('show');
        });
    });


