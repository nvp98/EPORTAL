@model EPORTAL.ModelsTagSign.ContractValidation
<script src="~/Content/assets/Chonse/chosen.jquery.js"></script>
<link href="~/Content/assets/Chonse/chosen.css" rel="stylesheet" />
@using (Html.BeginForm("UpdateDay", "Contract", FormMethod.Post, new { enctype = "multipart/form-data" }))
{
    @Html.AntiForgeryToken()
    @Html.HiddenFor(model => model.IDContract)
    @*@Html.HiddenFor(model => model.Begind)
        @Html.HiddenFor(model => model.Endd)*@
    <div class="modal-dialog" id="form" style="margin-top:5%;">
        <div class="modal-content">
            <div class="modal-header">
                <h5 id="ModalTitle"></h5>
                <a href="#" class="close" data-dismiss="modal">&times;</a>
            </div>
            <div class="modal-body" >
                <fieldset id="SubmitForm">
                    <div class="row">

                        <div class="col-md-12">
                            <div class="form-group">
                                <label class="small mb-1">Tên hợp đồng</label>
                                @Html.EditorFor(model => model.Contract, new { htmlAttributes = new { @class = "form-control", @readonly = "readonly", @id = "Contract", @text = "" } })
                            </div>
                        </div>
                        <div class="col-md-12">
                            <div class="form-group">
                                <label class="small mb-1">Số hợp đồng</label>
                                @Html.EditorFor(model => model.Somecontracts, new { htmlAttributes = new { @class = "form-control", @readonly = "readonly", @id = "Somecontracts", @text = "" } })
                            </div>
                        </div>
                        <div class="col-md-12">
                            <div class="form-group">
                                <label class="small mb-1">Nhà thầu</label>
                                @Html.DropDownList("IDNT", null, new { id = "IDNT", @class = "form-control", @readonly = "readonly" })
                                @Html.ValidationMessageFor(model => model.IDNT, "", new { @class = "text-danger", @readonly = "readonly" })
                            </div>
                        </div>
                        <div class="col-md-12">
                            <div class="form-group">
                                <label class="small mb-1">Nhà thầu</label>
                                @Html.DropDownList("IDBP", null, new { id = "IDBP", @class = "form-control", @readonly = "readonly" })
                                @Html.ValidationMessageFor(model => model.IDBP, "", new { @class = "text-danger", @readonly = "readonly" })
                            </div> 
                        </div>
                        <div class="col-md-6">
                            <div class="form-group">
                                <label class="small mb-1">Ngày bắt đầu</label>
                                @Html.EditorFor(model => model.BeginDate, new { htmlAttributes = new { @class = "form-control", placeholder = "", @id = "Date", @type = "date", @Value = ViewBag.BeginDate } })
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="form-group">
                                <label class="small mb-1">Ngày kết thúc</label>
                                @Html.EditorFor(model => model.EndDate, new { htmlAttributes = new { @class = "form-control", placeholder = "", @id = "Date", @type = "date", @Value = ViewBag.EndDate } })
                            </div>
                        </div>
                    </div>
                    <div class="btn-margin-top text-center">

                        <input type="submit" value="Xác nhận" class="btn btn-success button_submit" />

                    </div>

                </fieldset>

            </div>
        </div>
    </div>

}
<script type="text/javascript">
    function checkfile(sender) {
        var validExts = new Array(".pdf");
        var fileExt = sender.value;
        fileExt = fileExt.substring(fileExt.lastIndexOf('.'));
        if (validExts.indexOf(fileExt) < 0) {
            alert("Vui lòng chọn file Excel: " +
                validExts.toString() + "");
            $('#FileUpload').val() = '';
            return false;
        }
        else { return true; }
    };
</script>






