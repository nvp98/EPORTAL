@model EPORTAL.ModelsTagSign.AuthorizationContractorsValidation
<script src="~/Content/assets/Chonse/chosen.jquery.js"></script>
<link href="~/Content/assets/Chonse/chosen.css" rel="stylesheet" />

@using (Html.BeginForm("Create", "DelegationPowers", FormMethod.Post, new { enctype = "multipart/form-data" }))
{
    @Html.AntiForgeryToken()
    <div class="modal-dialog" id="form">
        <div class="modal-content">
            <div class="modal-header">
                <h5 id="ModalTitle"></h5>
                <a href="#" class="close" data-dismiss="modal">&times;</a>
            </div>
            <div class="modal-body">
                <fieldset id="SubmitForm">
                    <div class="row">
                        <div class="col-md-12">
                            <div class="form-group">
                                <label class="small mb-1">Nhập mã nhân viên</label>
                                @Html.DropDownListFor(model => model.IDNhanVien, ViewBag.NVList as SelectList, "--Chọn Mã nhân viên--", new { @id = "IDNhanVien", @class = "form-control" })
                                @Html.ValidationMessageFor(model => model.IDNhanVien, "", new { @class = "text-danger" })

                            </div>
                        </div>
                        <div class="col-md-12">
                            <div class="form-group">
                                <label class="small mb-1">Nhập quyền đăng nhập</label>

                                @Html.DropDownListFor(model => model.IDLKD, ViewBag.LKDList as SelectList, "--Chọn quyền xử lý văn bản--", new { @id = "IDLKD", @class = "form-control" })
                                @Html.ValidationMessageFor(model => model.IDLKD, "", new { @class = "text-danger" })
                            </div>
                        </div>
                        <div class="col-md-12">
                            <div class="form-group">
                                <label class="small mb-1">Xử lý kiêm nhiệm</label>
                                @Html.DropDownList("Selected", null, "", new { id = "multiSelectDropDown", @class = "form-control", @style = "width:100%", multiple = "multiple" })

                            </div>
                        </div>
                    </div>
                    <div class="btn-margin-top text-center">

                        <input type="submit" value="Xác nhận" class="btn btn-success button_submit" />

                    </div>

                </fieldset>

            </div>
        </div>
    </div>
}
<script type="text/javascript">
    $("#IDNhanVien").chosen({
        width: "100%"
    });
    $("#IDLKD").chosen({
        width: "100%"
    });
    $(function () {
        $("#multiSelectDropDown").chosen({
            width: "100%"
        });
    });
</script>


