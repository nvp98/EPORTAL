@model EPORTAL.ModelsTagSign.ContractValidation
<script src="~/Content/assets/Chonse/chosen.jquery.js"></script>
<link href="~/Content/assets/Chonse/chosen.css" rel="stylesheet" />

@using (Html.BeginForm("CheckInformation", "Contract", FormMethod.Post, new { enctype = "multipart/form-data" }))
{
    @Html.AntiForgeryToken()
    @Html.HiddenFor(model => model.IDContract)
    <div class="modal-dialog" id="form" style="margin-top: 7%;">
        <div class="modal-content">
            <div class="modal-header">
                <h5 id="ModalTitle"></h5>
                <a href="#" class="close" data-dismiss="modal">&times;</a>
            </div>
            <div class="modal-body">
                <fieldset id="SubmitForm">
                    <div class="row">

                        <div class="col-md-12">
                            <div class="form-group" style="display:flex;width:100%;">
                                <div class="col-md-4" style="padding-top:1%;">
                                    <span class="small mb-2" style="font-size:15px;">TrP BP/NM : </span>
                                </div>
                                <div class="col-md-8" style="text-align:left;">
                                    @Html.DropDownListFor(model => model.TPBP, ViewBag.TPBPList as SelectList, "----- Chọn Tr/P BP/NM -----", new { @id = "BPQL", @class = "form-control" })
                                    @Html.ValidationMessageFor(model => model.TPBP, "", new { @class = "text-danger" })
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="btn-margin-top text-center">

                        <input type="submit" value="Trình ký" class="btn btn-success pull-right" />
                    </div>

                </fieldset>

            </div>
        </div>
    </div>

}


<script>
    $(document).ready(function () {
        $("#bnt-hide").click(function () {
            $("p").hide();
        });
</script>
<script type="text/javascript">

    $("#CKNVDK").chosen({
        width: "100%"
    });
    $("#BPQL").chosen({
        width: "100%"
    });
    $("#VP1C").chosen({
        width: "100%"
    });

</script>






