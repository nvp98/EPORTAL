@model EPORTAL.ModelsTagSign.SigersValidation
@using EPORTAL.ModelsView360;
<script src="~/Content/assets/Chonse/chosen.jquery.js"></script>
<link href="~/Content/assets/Chonse/chosen.css" rel="stylesheet" />
<div>
    <div class="tab" style="background: #fdfdfd;">
        <button class="tablinks" onclick="openCity(event, 'London')" id="defaultOpen"><h6><b>NHÂN VIÊN NT ĐANG LÀM VIỆC</b></h6></button>
        <button class="tablinks" style="margin-left: 5px" onclick="openCity(event, 'Paris')"><h6><b>NHÂN VIÊN NHÀ NT ĐÃ NGHỈ VIỆC</b></h6></button>
    </div>
</div>
@using (Html.BeginForm("CheckInformation", "ListExtendcard", FormMethod.Post, new { enctype = "multipart/form-data" }))
{
    @Html.AntiForgeryToken()
    @Html.HiddenFor(model => model.idds)
    <div class="modal-dialog" id="form" style="margin-top: 7%;">
        <div class="modal-content">
            <div class="modal-header">
                <h5 id="ModalTitle"></h5>
                <a href="#" class="close" data-dismiss="modal">&times;</a>
            </div>
            <div class="modal-body">
                @{
                    EPORTALEntities db = new EPORTALEntities();
                    var IDDS = (int)ViewBag.ID;
                    var ID = db.NT_Extendcard.Where(x => x.IDGH == IDDS).FirstOrDefault();
                    if (ID.Namefile == "1")
                    {
                        <fieldset id="SubmitForm">
                            <div class="row">
                                <div class="col-md-12">
                                    <div class="form-group" style="display:flex;width:100%;">
                                        <div class="col-md-4" style="padding-top:1%;">
                                            <span class="small mb-2" style="font-size:15px;">Kỹ thuật viên &nbsp; &nbsp;: </span>
                                        </div>
                                        <div class="col-md-8" style="text-align:left;">
                                            @Html.DropDownListFor(model => model.idktv, ViewBag.KTVList as SelectList, "----- Chọn KTV ký nháy -----", new { @id = "CKNVDK", @class = "form-control" })
                                            @Html.ValidationMessageFor(model => model.idktv, "", new { @class = "text-danger" })
                                        </div>
                                    </div>
                                </div>
                                <div class="col-md-12">
                                    <div class="form-group" style="display:flex;width:100%;">
                                        <div class="col-md-4" style="padding-top:1%;">
                                            <span class="small mb-2" style="font-size:15px;">Bộ phận quản lý : </span>
                                        </div>
                                        <div class="col-md-8" style="text-align:left;">
                                            @Html.DropDownListFor(model => model.idbpql, ViewBag.TPBPList as SelectList, "----- Chọn Tr/P BP/NM -----", new { @id = "BPQL", @class = "form-control" })
                                            @Html.ValidationMessageFor(model => model.idbpql, "", new { @class = "text-danger" })
                                        </div>
                                    </div>
                                </div>
                                <div class="col-md-12">
                                    <div class="form-group" style="display:flex;width:100%;">
                                        <div class="col-md-4" style="padding-top:1%;">
                                            <span class="small mb-2" style="font-size:15px;">VP1C : </span>
                                        </div>
                                        <div class="col-md-8" style="text-align:left;">
                                            @Html.DropDownListFor(model => model.idvp1c, ViewBag.VP1CList as SelectList, "----- Chọn CBNV VP1C -----", new { @id = "VP1C", @class = "form-control" })
                                            @Html.ValidationMessageFor(model => model.idvp1c, "", new { @class = "text-danger" })
                                        </div>
                                    </div>
                                </div>
                            </div>
                            <div class="btn-margin-top text-center">

                                <input type="submit" value="Trình ký" class="btn btn-success pull-right" />
                            </div>

                        </fieldset>
                    }
                    else
                    {
                        <fieldset id="SubmitForm">
                            <div class="row">
                                <div class="col-md-12">
                                    <div class="form-group" style="display:flex;width:100%;">
                                        <div class="col-md-4" style="padding-top:1%;">
                                            <span class="small mb-2" style="font-size:15px;">Bộ phận QL : </span>
                                        </div>
                                        <div class="col-md-8" style="text-align:left;">
                                            @Html.DropDownListFor(model => model.idktv, ViewBag.TPBPList as SelectList, "----- Chọn Tr/P BP/NM -----", new { @id = "TPBP", @class = "form-control" })
                                            @Html.ValidationMessageFor(model => model.idktv, "", new { @class = "text-danger" })
                                        </div>
                                    </div>
                                </div>
                                <div class="col-md-12">
                                    <div class="form-group" style="display:flex;width:100%;">
                                        <div class="col-md-4" style="padding-top:1%;">
                                            <span class="small mb-2" style="font-size:15px;">TP P. HCĐN : </span>
                                        </div>
                                        <div class="col-md-8" style="text-align:left;">
                                            @Html.DropDownListFor(model => model.idbpql, ViewBag.TPHCDNList as SelectList, "----- Chọn Tr/P P. HCĐN-----", new { @id = "PHCDN", @class = "form-control" })
                                            @Html.ValidationMessageFor(model => model.idbpql, "", new { @class = "text-danger" })
                                        </div>
                                    </div>
                                </div>
                                <div class="col-md-12">
                                    <div class="form-group" style="display:flex;width:100%;">
                                        <div class="col-md-4" style="padding-top:1%;">
                                            <span class="small mb-2" style="font-size:15px;">VP1C : </span>
                                        </div>
                                        <div class="col-md-8" style="text-align:left;">
                                            @Html.DropDownListFor(model => model.idvp1c, ViewBag.VP1CList as SelectList, "----- Chọn CBNV VP1C -----", new { @id = "VP1CNN", @class = "form-control" })
                                            @Html.ValidationMessageFor(model => model.idvp1c, "", new { @class = "text-danger" })
                                        </div>
                                    </div>
                                </div>
                            </div>
                            <div class="btn-margin-top text-center">

                                <input type="submit" value="Trình ký" class="btn btn-success pull-right" />
                            </div>

                        </fieldset>
                    }
                }


            </div>
        </div>
    </div>

}


<script>
    $(document).ready(function () {
        $("#bnt-hide").click(function () {
            $("p").hide();
        });
</script>
<script type="text/javascript">

    $("#CKNVDK").chosen({
        width: "100%"
    });
    $("#BPQL").chosen({
        width: "100%"
    });
    $("#VP1C").chosen({
        width: "100%"
    });
        $("#TPBP").chosen({
            width: "100%"
        });
        $("#PHCDN").chosen({
            width: "100%"
        });
        $("#VP1CNN").chosen({
            width: "100%"
        });

</script>





