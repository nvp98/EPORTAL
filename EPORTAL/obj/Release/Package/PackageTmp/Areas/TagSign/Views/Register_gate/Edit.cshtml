@model  EPORTAL.ModelsTagSign.Register_gates

@using (Html.BeginForm("Edit", "Register_gate", FormMethod.Post, new { enctype = "multipart/form-data" }))
{
    @Html.AntiForgeryToken()
    <div class="modal-dialog" id="form">
        <div class="modal-content">
            <div class="modal-header">
                <h5 id="ModalTitle"></h5>
                <a href="#" class="close" data-dismiss="modal">&times;</a>
            </div>
            <div class="modal-body">
                <fieldset id="SubmitForm">
                    @Html.HiddenFor(x => x.IDRE)
                    @Html.HiddenFor(x => x.NgayDK)


                    <div class="row">
                        <div class="col-md-12">
                            <div class="form-group">
                                <label style="margin-left:13px" class="small mb-1">Chọn cổng</label>
                                <div class="col-md-12">
                                    @Html.DropDownListFor(model => model.IDCong, ViewBag.Cong as SelectList, "----- Chọn Cổng -----", new { @id = "IDCong", @class = "form-control" })
                                    @Html.ValidationMessageFor(model => model.IDCong, "", new { @class = "text-danger" })
                                </div>
                            </div>
                        </div>
                    </div>                    <div class="row">
                        <div class="col-md-12">
                            <div class="form-group">
                                <label style="margin-left:13px" class="small mb-1">Chọn nhân viên</label>
                                <div class="col-md-12">
                                    @Html.DropDownListFor(model => model.MaNV, ViewBag.nhanVien as SelectList, "----- Chọn Cổng -----", new { @id = "MaNV", @class = "form-control" })
                                    @Html.ValidationMessageFor(model => model.MaNV, "", new { @class = "text-danger" })
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-md-12">
                            <div class="form-group">
                                <label style="margin-left:13px" class="small mb-1">Chọn hết hạn</label>
                                <div class="col-md-12">
                                    @Html.TextBox("NgayHetHan", null, new { @class = "form-control", placeholder = "Chọn ngày", @id = "NgayHH", @type = "date", @value = ViewBag.ngayHH })
                                    @Html.ValidationMessageFor(model => model.NgayHetHan, "", new { @class = "text-danger" })
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-md-12">
                            <div class="form-group">
                                <label style="margin-left:13px" class="small mb-1">Chọn trạng thái</label>
                                <div class="col-md-12">
                                    <select id="TT" name="IDTrangThai" class="form-control">
                                        <option value="">--Chọn Trạng Thái--</option>
                                        @if (Model.IDTrangThai == 0)
                                        {
                                            <option value="0" selected>Khóa</option>
                                        }
                                        else
                                        {
                                            <option value="0">Khóa</option>
                                        }
                                        @if (Model.IDTrangThai == 1)
                                        {
                                            <option value="1" selected>Mở</option>
                                        }
                                        else
                                        {
                                            <option value="1">Mở</option>
                                        }
                                    </select>
                                </div>
                            </div>

                        </div>

                    </div>


                    <div class="btn-margin-top text-center">
                        <input type="submit" value="Xác nhận" class="btn btn-success button_submit" />

                    </div>

                </fieldset>

            </div>
        </div>
    </div>
}
<script type="text/javascript">
    $("#IDCong").chosen({
        width: "100%"
    });

    $("#MaNV").chosen({
        width: "100%"
    });
    $("#TT").chosen({
        width: "100%"
    });
   /* $("#a").click(function () {
        console.log("a");
    })*/
</script>