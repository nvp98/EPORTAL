                                                    <span class="text-center" style="margin-top: 8px">Hợp đồng :</span>
                                                    <div class="col-md-3">
                                                        @Html.DropDownList("HDList", null, new { id = "IDHD", name = "IDHD", @class = "form-control", })
                                                    </div>
                                                </div>

                                            </div>
                                        </div>

                                    }
                                }


                            }

                        </div>
