
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
@using EPORTAL.ModelsTagSign
@model EPORTAL.ModelsTagSign.NT_Detail_ListExtendcardValidation
