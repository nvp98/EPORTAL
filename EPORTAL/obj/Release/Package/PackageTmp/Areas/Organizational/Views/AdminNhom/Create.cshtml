@model SoDoToChuc.Models.AdminNhom
@using EPORTAL.ModelsOrganizational

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    <div class="modal-dialog" id="form">
        <div class="modal-content">
            <div class="modal-header">
                <h5 id="ModalTitle"></h5>
                <a href="#" class="close" data-dismiss="modal">&times;</a>
            </div>
            <div class="modal-body">


                @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                <fieldset id="SubmitForm">
                    <div class="row">


                        <div class="col-md-12">
                            <div class="form-group">
                                <label class="small mb-1 font-weight-bold">Tên Nhóm</label>
                                @Html.EditorFor(model => model.TenNhom, new { htmlAttributes = new { @class = "form-control", placeholder = "Nhập Tên Nhóm", @id = "IDNhom", @text = "" } })
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="form-group">
                                <label class="small mb-1 font-weight-bold">Tên Phòng Ban</label>
                                @Html.DropDownListFor(model => model.IDPhongBan, ViewBag.PBList as SelectList, "--Chọn Phòng Ban--", new { @id = "IDPhongBan", @class = "form-control" })
                                @*@Html.ValidationMessageFor(model => model.V_TT, "", new { @class = "text-danger" })*@
                            </div>
                        </div>


                        <div class="col-md-6">
                            <div class="form-group">
                                <label class="small mb-1 font-weight-bold">SL Trưởng Phụ trách DB</label>
                                @Html.EditorFor(model => model.TPTDB, new { htmlAttributes = new { @class = "form-control", placeholder = "", @id = "TPTDB", @text = "" } })
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="form-group">
                                <label class="small mb-1 font-weight-bold">SL Phụ trách DB</label>
                                @Html.EditorFor(model => model.PTDB, new { htmlAttributes = new { @class = "form-control", placeholder = "", @id = "PTDB", @text = "" } })
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="form-group">
                                <label class="small mb-1 font-weight-bold">SL T/P Kíp DB</label>
                                @Html.EditorFor(model => model.TPKip, new { htmlAttributes = new { @class = "form-control", placeholder = "", @id = "TPKip", @text = "" } })
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="form-group">
                                <label class="small mb-1 font-weight-bold">SL KTV DB</label>
                                @Html.EditorFor(model => model.KTVDB, new { htmlAttributes = new { @class = "form-control", placeholder = "", @id = "KTVDB", @text = "" } })
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="form-group">
                                <label class="small mb-1 font-weight-bold">SL KTV Ca DB</label>
                                @Html.EditorFor(model => model.KTVCa, new { htmlAttributes = new { @class = "form-control", placeholder = "", @id = "KTVCa", @text = "" } })
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="form-group">
                                <label class="small mb-1 font-weight-bold">SL TT/TP DB</label>
                                @Html.EditorFor(model => model.TTTPDB, new { htmlAttributes = new { @class = "form-control", placeholder = "", @id = "TTTPDB", @text = "" } })
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="form-group">
                                <label class="small mb-1 font-weight-bold">SL NV DB</label>
                                @Html.EditorFor(model => model.NVDB, new { htmlAttributes = new { @class = "form-control", placeholder = "", @id = "NVDB", @text = "" } })
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="form-group">
                                <label class="small mb-1 font-weight-bold">SL NV Ca DB</label>
                                @Html.EditorFor(model => model.NVCa, new { htmlAttributes = new { @class = "form-control", placeholder = "", @id = "NVCa", @text = "" } })
                            </div>
                        </div>

                    </div>

                    <div class="btn-margin-top text-center">

                        <input type="submit" value="Xác nhận" class="btn btn-success button_submit" />
                        <input type="reset" value="Hủy" class="btn btn-danger button_cancel" data-dismiss="modal" />

                    </div>

                </fieldset>

            </div>
        </div>
    </div>
}


<script type="text/javascript">
    $("#IDPhongBan").chosen({
        width: "100%"
    });
    //$("#IDNhomPT").chosen({
    //    width: "100%"
    //});
    $("#toggle").click((i, v) => {
        $("#isTPT").val(i.currentTarget.innerText == 'Đúng' ? 0 : 1);
    });
</script>

