            //if (window.matchMedia('(max-width: 1500px)').matches) {
            //    $('body').addClass("sb-sidenav-toggled")
            //}

            $(window).scroll(function () {
                if ($(window).scrollTop() > 200) {
                    $("#navtop").animate({ height: "80px" }, {
                        queue: false,
                        duration: 1000
                    })
                    $("#logo").animate({ "max-width": "200px" }, {
                        queue: false,
                        duration: 1000
                    })
                }
                else {
                    $("#navtop").animate({ height: "120px" }, {
                        queue: false,
                        duration: 1000
                    })
                    $("#logo").animate({ "max-width": "250px" }, {
                        queue: false,
                        duration: 1000
                    })
                }
            })

        })
    </script>

