@model SoDoToChuc.Models.AdminPhanXuong
@using EPORTAL.ModelsOrganizational

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    @Html.HiddenFor(model => model.PhanXuongID)
    <div class="modal-dialog" id="form">
        <div class="modal-content">
            <div class="modal-header">
                <h5 id="ModalTitle"></h5>
                <a href="#" class="close" data-dismiss="modal">&times;</a>
            </div>
            <div class="modal-body">
                <fieldset id="SubmitForm">
                    <div class="row text-left">
                        <div class="col-md-6">
                            <div class="form-group ">
                                <label class=" mb-1 font-weight-bold">Tên Phân Xưởng</label>
                                @Html.EditorFor(model => model.TenPhanXuong, new { htmlAttributes = new { @class = "form-control", placeholder = "Biển Kiểm Soát", @id = "IDPhanXuong" } })
                                @*@Html.ValidationMessageFor(model => model.V_BKS, "", new { @class = "text-danger" })*@
                            </div>
                        </div>

                        <div class="col-md-6">
                            <div class="form-group ">
                                <label class=" mb-1 font-weight-bold">Phòng ban</label>
                                @Html.DropDownList("PhongBanID", null, new { @id = "PhongBanID", @class = "form-control", })
                                @Html.ValidationMessageFor(model => model.PhongBanID, "", new { @class = "text-danger" })
                            </div>
                        </div>

                        <label class=" col-md-12 font-weight-bold text-left">Nhân sự định biên</label>

                        <div class="col-md-6">
                            <div class="form-group ">
                                <label class=" mb-1 font-weight-bold">Quản đốc ĐB</label>
                                @Html.EditorFor(model => model.TPDB, new { htmlAttributes = new { @class = "form-control", placeholder = "", @id = "TPDB", } })
                                @Html.ValidationMessageFor(model => model.TPDB, "", new { @class = "text-danger" })
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="form-group ">
                                <label class=" mb-1 font-weight-bold">Phụ Trách ĐB</label>
                                @Html.EditorFor(model => model.PTDB, new { htmlAttributes = new { @class = "form-control", placeholder = "", @id = "PTDB", } })
                                @Html.ValidationMessageFor(model => model.PTDB, "", new { @class = "text-danger" })
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="form-group ">
                                <label class=" mb-1 font-weight-bold">T/P Kíp DB</label>
                                @Html.EditorFor(model => model.TPKip, new { htmlAttributes = new { @class = "form-control", placeholder = "", @id = "TPKip", } })
                                @Html.ValidationMessageFor(model => model.TPKip, "", new { @class = "text-danger" })
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="form-group ">
                                <label class=" mb-1 font-weight-bold">KTV DB</label>
                                @Html.EditorFor(model => model.KTVDB, new { htmlAttributes = new { @class = "form-control", placeholder = "", @id = "KTVDB", } })
                                @Html.ValidationMessageFor(model => model.KTVDB, "", new { @class = "text-danger" })
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="form-group ">
                                <label class=" mb-1 font-weight-bold">Tổ trưởng/Tổ phó DB</label>
                                @Html.EditorFor(model => model.TTTP, new { htmlAttributes = new { @class = "form-control", placeholder = "", @id = "TTTP", } })
                                @Html.ValidationMessageFor(model => model.TTTP, "", new { @class = "text-danger" })
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="form-group ">
                                <label class=" mb-1 font-weight-bold">Nhân viên HC DB</label>
                                @Html.EditorFor(model => model.PTTT, new { htmlAttributes = new { @class = "form-control", placeholder = "", @id = "PTTT", } })
                                @Html.ValidationMessageFor(model => model.PTTT, "", new { @class = "text-danger" })
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="form-group ">
                                <label class=" mb-1 font-weight-bold">Nhân viên DB</label>
                                @Html.EditorFor(model => model.NVDB, new { htmlAttributes = new { @class = "form-control", placeholder = "", @id = "NVDB", } })
                                @Html.ValidationMessageFor(model => model.NVDB, "", new { @class = "text-danger" })
                            </div>
                        </div>



                    </div>

                    <div class="btn-margin-top text-center">

                        <input type="submit" value="Xác nhận" class="btn btn-success button_submit" />
                        <input type="reset" value="Hủy" class="btn btn-danger button_cancel" data-dismiss="modal" />
                    </div>

                </fieldset>

            </div>
        </div>
    </div>
}


<script type="text/javascript">
    $("#PhongBanID").chosen({
        width: "100%",
        textAlign: "left"
    });
</script>
