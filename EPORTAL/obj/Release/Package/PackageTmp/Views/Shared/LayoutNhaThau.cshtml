<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta http-equiv="Content-Language" content="en">
    <meta http-equiv="Content-Type" content="text/html; charset=utf-8" />
    <title>Cổng thông tin điện tử HPDQ</title>
    <meta name="viewport" content="width=device-width, initial-scale=1, maximum-scale=1, user-scalable=no, shrink-to-fit=no" />
    <meta name="description" content="This is an example dashboard created using build-in elements and components.">
    <meta name="msapplication-tap-highlight" content="no">
    <link href="~/Content/main.css" rel="stylesheet" />
    <script src="~/Content/assets/plotly-latest.min.js"></script>
    <script src="~/Content/jquery-3.0.0.min.js"></script>
    <script src="~/Scripts/bootstrap.min.js"></script>
    <link href="~/Content/fontawesome-free-6.0.0-web/css/all.min.css" rel="stylesheet" />

</head>
@using EPORTAL.ModelsView360;
@using EPORTAL.ModelsTagSign;
@using EPORTAL.Models;
<body @*onselectstart="return false" oncontextmenu="return false"*@>
    @if (!User.Identity.IsAuthenticated)
    {
        Response.Redirect("~/Login");
    }
    <div class="app-container app-theme-white body-tabs-shadow fixed-sidebar fixed-header">
        <div class="app-header header-shadow">
            <div class="app-header__logo">
                <div class="logo-src"></div>
                <div class="header__pane ml-auto">
                    <div>
                        <button type="button" class="hamburger close-sidebar-btn hamburger--elastic" data-class="closed-sidebar">
                            <span class="hamburger-box">
                                <span class="hamburger-inner"></span>
                            </span>
                        </button>
                    </div>
                </div>
            </div>
            <div class="app-header__mobile-menu">
                <div>
                    <button type="button" class="hamburger hamburger--elastic mobile-toggle-nav">
                        <span class="hamburger-box">
                            <span class="hamburger-inner"></span>
                        </span>
                    </button>
                </div>
            </div>
            <div class="app-header__menu">
                <span>
                    <button type="button" class="btn-icon btn-icon-only btn btn-primary btn-sm mobile-toggle-header-nav">
                        <span class="btn-icon-wrapper">
                            <i class="fa fa-ellipsis-v fa-w-6"></i>
                        </span>
                    </button>
                </span>
            </div>
            <div class="app-header__content">
                <div class="header-slogan">
                    <div class="widget-content">
                        <div class="slogan">
                            Cổng thông tin điện tử HPDQ
                        </div>
                    </div>
                </div>
                <div class="app-header-right">
                    <div class="header-btn-lg pr-0">
                        <div class="widget-content p-0">
                            <div class="widget-content-wrapper">
                                <div class="widget-content-left">
                                    <div class="btn-group">
                                        <a data-toggle="dropdown" aria-haspopup="true" aria-expanded="false" class="p-0 btn">
                                            <img width="42" class="rounded-circle" src="~/Content/assets/images/avatars/adminlogo.jpg" alt="">
                                            <i class="fa fa-angle-down ml-2 opacity-8"></i>
                                        </a>
                                        <div tabindex="-1" role="menu" aria-hidden="true" class="dropdown-menu dropdown-menu-right">
                                            <a class="dropdown-item" href="@Url.Action("Logout", "Login", new { area = "" })">Đăng xuất</a>
                                            <a class="dropdown-item" href="@Url.Action("ChangePassword", "AccountNT",new {  area = "Partner", id = @EPORTAL.Models.MyAuthentication.ID })">Đổi mật khẩu</a>
                                            <a class="dropdown-item" href="@Url.Action("Signature", "AccountNT", new {  area = "Partner", id = @EPORTAL.Models.MyAuthentication.ID })">Cập nhật chữ ký</a>
                                        </div>


                                    </div>
                                </div>
                                <div class="widget-content-left  ml-3 header-user-info">
                                    <div class="widget-heading">
                                        @EPORTAL.Models.MyAuthentication.TenNV
                                    </div>
                                    <div class="widget-subheading">
                                        @*PNS*@
                                    </div>
                                </div>
                                <div class="widget-content-right header-user-info ml-3">

                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <div class="app-main">
            <div class="app-sidebar sidebar-shadow" style="height: -webkit-fill-available;">
                <div class="app-header__logo">
                    <div class="logo-src"></div>
                    <div class="header__pane ml-auto">
                        <div>
                            <button type="button" class="hamburger close-sidebar-btn hamburger--elastic" data-class="closed-sidebar">
                                <span class="hamburger-box">
                                    <span class="hamburger-inner"></span>
                                </span>
                            </button>
                        </div>
                    </div>
                </div>
                <div class="app-header__mobile-menu">
                    <div>
                        <button type="button" class="hamburger hamburger--elastic mobile-toggle-nav">
                            <span class="hamburger-box">
                                <span class="hamburger-inner"></span>
                            </span>
                        </button>
                    </div>
                </div>
                <div class="app-header__menu">
                    <span>
                        <button type="button" class="btn-icon btn-icon-only btn btn-primary btn-sm mobile-toggle-header-nav">
                            <span class="btn-icon-wrapper">
                                <i class="fa fa-ellipsis-v fa-w-6"></i>
                            </span>
                        </button>
                    </span>
                </div>
                <div id="divMenu" class="scrollbar-sidebar" style="margin-top:20%;">
                    <div class="app-sidebar__inner">
                        <ul class="vertical-nav-menu">

                            <li class="app-sidebar__heading">ĐĂNG KÝ</li>
                            @*<li>
                                <a id="ListCarteTemporaireNT" href="@Url.Action("Index", "ListCarteTemporaireNT", new {area="TagSign"})">
                                    <i class="fa fa-file p-lg-1 "></i>
                                    Đăng ký cấp thẻ tạm
                                </a>
                            </li>*@
                            <li>
                                <a id="ListExtendcardNT" href="@Url.Action("Index", "List_RegisterPeople_NT", new {area="TagSign"})">
                                    <i class="fa fa-file-text p-lg-1 "></i>
                                    Đăng ký thẻ người
                                </a>
                            </li>
                            @*<li>
                                <a id="ListCardRegisInforNT" href="@Url.Action("Index", "ListCardRegisInforNT", new {area="TagSign"})">
                                    <i class="fa fa-folder-open p-lg-1 "></i>
                                    Đăng ký làm thẻ
                                </a>
                            </li>
                            <li>
                                <a id="ListExtendcardNT" href="@Url.Action("Index", "ListExtendcardNT", new {area="TagSign"})">
                                    <i class="fa fa-folder p-lg-1 "></i>
                                    Đăng ký gia hạn thẻ
                                </a>
                            </li>*@

                            <li class="app-sidebar__heading">Thông tin dữ liệu</li>
                            <li>
                                <a id="Account" href="@Url.Action("Index", "Position", new { area = "TagSign" })">
                                    <i class="fa fa-sitemap p-lg-1"></i>
                                    Chức vụ
                                </a>
                            </li>
                            <li>
                                <a id="Account" href="@Url.Action("Index", "WorkPlace", new { area = "TagSign" })">
                                    <i class="fa fa-simplybuilt p-lg-1"></i>
                                    Khu vực làm việc
                                </a>
                            </li>
                            <li>
                                <a id="Account" href="@Url.Action("Index", "PortTo", new { area = "TagSign" })">
                                    <i class="fa fa-university p-lg-1"></i>
                                    Cổng ra vào
                                </a>
                            </li>
                            <li>
                                <a id="Account" href="@Url.Action("Index", "ContractorGroup", new { area = "TagSign" })">
                                    <i class="fa fa-users p-lg-1"></i>
                                    Nhóm nhà thầu
                                </a>
                            </li>
                            <li class="app-sidebar__heading">Hướng dẫn thủ tục</li>
                            <li>
                                <a href="https://hoaphatdungquat.vn/huong-dan-thu-tuc/" target="_blank" style="height: auto;line-height: 1.0;white-space: normal;">
                                    <i class="fa fa-comments"></i> Trở lại làm việc
                                </a>
                            </li>
                        </ul>

                    </div>
                </div>
            </div>

            @RenderBody()

        </div>
    </div>
    <script src="~/Scripts/jquery.validate.min.js"></script>
    <script src="~/Scripts/jquery.validate.unobtrusive.min.js"></script>
    <script type="text/javascript" src="~/Content/assets/scripts/main.js"></script>

    <script>
    </script>

</body>
</html>
