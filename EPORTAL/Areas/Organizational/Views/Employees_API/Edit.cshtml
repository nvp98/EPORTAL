
@model SoDoToChuc.Models.NhanVienAPIUpdate
@using EPORTAL.ModelsOrganizational

@*<script src="~/Content/assets/Chonse/chosen.jquery.js"></script>
    <link href="~/Content/assets/Chonse/chosen.css" rel="stylesheet" />*@

@using (Html.BeginForm("Edit", "Employees_API", FormMethod.Post, new { enctype = "multipart/form-data" }))
{
    @Html.AntiForgeryToken()
    @Html.HiddenFor(model => model.IDNV)
    @Html.HiddenFor(model => model.IDPhongBan)
    @Html.HiddenFor(model => model.MaViTri)
    <div class="modal-dialog" id="form">
        <div class="modal-content">
            <div class="modal-header">
                <h5 id="ModalTitle"></h5>
                <a href="#" class="close" data-dismiss="modal">&times;</a>
            </div>
            <div class="modal-body">
                <fieldset id="SubmitForm">
                    <div class="row text-left">
                        <div class="col-md-12">
                            <div class="form-group">
                                <label class="small mb-1 font-weight-bold">Mã NV</label>
                                @Html.EditorFor(model => model.MaNV, new { htmlAttributes = new { @class = "form-control", @readonly = "readonly", placeholder = "", @id = "MaNV" } })
                                @*@Html.ValidationMessageFor(model => model.V_BKS, "", new { @class = "text-danger" })*@
                            </div>
                        </div>
                        <div class="col-md-12">
                            <div class="form-group">
                                <label class="small mb-1 font-weight-bold">Họ Tên</label>
                                @Html.EditorFor(model => model.HoTen, new { htmlAttributes = new { @class = "form-control", @readonly = "readonly", placeholder = "", @id = "IDNV" } })
                                @*@Html.ValidationMessageFor(model => model.V_BKS, "", new { @class = "text-danger" })*@
                            </div>
                        </div>


                        <div class="col-md-12">
                            <div class="form-group">
                                <label class=" mb-1 font-weight-bold">TT Sắp Xếp</label>
                                @Html.EditorFor(model => model.TT_BGD, new { htmlAttributes = new { @class = "form-control", placeholder = "", @id = "TT_BGD", } })
                                @Html.ValidationMessageFor(model => model.TT_BGD, "", new { @class = "text-danger" })
                            </div>
                        </div>

                        <div class="col-md-12">
                            <div class="form-group">
                                <label class="small mb-1 font-weight-bold">Hình ảnh</label>
                                @Html.EditorFor(model => model.ImagePath, new { htmlAttributes = new { @class = "form-control", placeholder = "", @id = "ImagePath", @readonly = "true" } })
                                <div class="col-md-10">
                                    <input type="file" name="ImageFile" />

                                </div>
                            </div>
                        </div>

                    </div>

                    <div class="btn-margin-top text-center">

                        <input type="submit" value="Xác nhận" class="btn btn-success button_submit" />
                        <input type="reset" value="Hủy" class="btn btn-danger button_cancel" data-dismiss="modal" />
                    </div>

                </fieldset>

            </div>
        </div>
    </div>



}




