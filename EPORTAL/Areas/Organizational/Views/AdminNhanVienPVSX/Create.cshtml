                                    @*@Html.DropDownListFor(model => model.IDNhom, ViewBag.NhomList as SelectList, "--Chọn Nhóm--", new { @id = "NhomID", @class = "form-control" })*@
                                    @*@Html.ValidationMessageFor(model => model.V_TT, "", new { @class = "text-danger" })*@
                                <!--</div>
                            </div>
                            <div class="col-md-6">
                                <div class="form-group">
