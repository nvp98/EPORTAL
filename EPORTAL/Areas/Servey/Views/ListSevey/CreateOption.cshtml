@model EPORTAL.ModelsServey.OptionServeyValidation
@*<script src="~/Content/assets/Chonse/chosen.jquery.js"></script>
    <link href="~/Content/assets/Chonse/chosen.css" rel="stylesheet" />*@
<script src="@Url.Content("~/Scripts/jquery.validate.min.js")" type="text/javascript"></script>
<script src="@Url.Content("~/Scripts/jquery.validate.unobtrusive.min.js")" type="text/javascript"></script>

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    <div class="modal-dialog" style="max-width:800px" id="formF">
        <div class="modal-content">
            <div class="modal-header">
                <h5 id="ModalTitle"></h5>
                <a href="#" class="close" data-dismiss="modal">&times;</a>
            </div>
            <div class="modal-body">

                @Html.HiddenFor(model => model.IDSV)
                @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                <fieldset id="SubmitForm">
                    <div class="row">
                        <div class="form-group col-md-9 " style="display:grid">
                            <label class="mb-1">Tên Option</label>
                            @Html.TextAreaFor(model => model.ContentOT, new { @class = "form-control", @rows = 1, placeholder = "Tên option", @id = "ContentOT", })
                            @Html.ValidationMessageFor(model => model.ContentOT, "", new { @class = "text-danger" })
                        </div>
                        <div class="form-group col-md-3 " style="display:grid">
                            <label class="mb-1">Thứ tự sắp xếp</label>
                            @Html.TextBoxFor(model => model.OrderBy, new { @class = "form-control", @rows = 1, @type = "number", placeholder = "", @id = "OrderBy", })
                            @Html.ValidationMessageFor(model => model.OrderBy, "", new { @class = "text-danger" })
                        </div>
                        <div id="list_vt" style="width:100%">
                            @*<div class="form-group col-md-12 " style="display:grid">
                        @Html.TextAreaFor(model => model.TenViTri, new { @class = "form-control", @rows = 1, placeholder = "Tên Vị trí", @id = "TenViTri", })
                        @Html.ValidationMessageFor(model => model.TenViTri, "", new { @class = "text-danger" })
                    </div>*@
                        </div>
                        <div class="form-group col-md-12">
                            <button id="add-vt" type="button" class="btn btn-secondary border border-white"><i class="fas fa-plus"></i></button>
                        </div>

                    </div>

                    <div class="btn-margin-top text-center">
                        <input type="submit" value="Xác nhận" class="btn btn-primary pull-right " />
                        <input type="reset" value="Hủy" class="btn btn-danger pull-right button_cancel mr-1" data-dismiss="modal" />
                    </div>
                </fieldset>

            </div>
        </div>
    </div>

}


<script>
    $("#formF #IDPB").chosen({
        width: "100%"
    });
    $(document).ready(function () {
        var i = 2;
        $("#add-vt").click(function () {
            var renderList = $(`<div class='form-group col-md-9' style='display: grid'>  <textarea class='form-control' placeholder='Tên option ${i}' rows='1' name='ContentOTT_${i}' id='ContentOT_${i}'></textarea></div>
                        <div class='form-group col-md-3' style='display: grid'>  <input class='form-control' placeholder='Thứ tự ${i}' type='number' name='OrderByT_${i}' id='OrderByT_${i}'></input></div>
    `);
            $("#list_vt").before(renderList);
            i++;
        });
    });
</script>




