
@model  EPORTAL.ModelsTagSign.DK_Detail_ListExtendcardNTValidation
@using EPORTAL.ModelsView360
@using EPORTAL.ModelsTagSign
@using EPORTAL.ModelsPartner;

@{
    ViewBag.Title = "PrintTestView";
    Layout = "~/Views/Shared/PrintView.cshtml";
}
@{
    EPORTALEntities db = new EPORTALEntities();
    EPORTAL_REGISTEREntities db_dk = new EPORTAL_REGISTEREntities();
    EPORTAL_NTEntities dbNT = new EPORTAL_NTEntities();
}
<div>

    <div>
        <div style="flex: 0 0 50%; float: left; max-width: 300px; text-align: center; font-weight: bold; font-size: 1.2rem; text-transform: uppercase;">
            <img alt="Hòa Phát Dung Quất" src="https://portal.hoaphatdungquat.vn/Content/assets/images/logo-inverse.png" width="90%" />
            <span class="" style="margin-top: 0; margin-bottom: 1rem;">Công ty Cổ phần Thép</span>
            <p class="" style="margin-top: 0; margin-bottom: 1rem;">Hòa Phát Dung Quất</p>

        </div>
        <div class="col-md-6" style="float:right;text-align:right; font-weight: bold; margin-left: auto;">
            <span>BM.05/QT.20</span>
            <p style="margin-top: 2px"><span style="font-style:italic;">Ngày hiệu lực:</span>  15/06/2023</p>
        </div>
        <div style="flex: 0 0 100%; max-width: 100%; padding-bottom: 1rem;">
            <br />
            <br />
            <br />
            <br />
            <br />
            <p style="text-align:center; font-size: 1.5rem;font-weight:bold; text-transform:uppercase;">ĐƠN ĐĂNG KÝ CẤP THẺ (THẺ RA VÀO TÍCH HỢP LƯU TRÚ/ĐTTM)</p>
        </div>
        @{
            var IDDKT = db_dk.DK_CardExtend.Where(x => x.IDGHT == Model.IDGHT).FirstOrDefault();
            var IDNVNT = dbNT.NT_UserTemp.Where(x => x.ID == IDDKT.NhanVienID).FirstOrDefault();
            var IDPhongBan = db.PhongBans.Where(x => x.IDPhongBan == IDDKT.PhongBanID).FirstOrDefault();
            var IDNhaThau = db.NT_Partner.Where(x => x.ID == IDDKT.NTID).FirstOrDefault();
            var IDHopDong = db.NT_Contract.Where(x => x.IDContract == IDDKT.HDID).FirstOrDefault();

            <div class="col-md-12">
                <label> <b>Kính gửi:</b> - Công ty Cổ phần Thép Hòa Phát Dung Quất.</label><br />
                <label> Căn cứ theo hợp đồng số:..............................  giữa Nhà thầu @IDNhaThau.FullName và HPDQ (Thời hạn hợp đồng: đến .................. ngày .................. )</label>  <br />
                <label> Nhà thầu đang thực hiện gói thầu thời hạn gói thầu từ ngày ..................  đến ngày .................. do BP @IDPhongBan.TenPhongBan  quản lý.</label><br />
                <label>Vì lý do..............................Để đáp ứng yêu cầu công việc của Nhà thầu @IDNhaThau.FullName,  kính đề nghị đổi/gia hạn/điều chỉnh thông tin thẻ cho những CBNV có tên sau:</label>
            </div>
        }

        <div class="card-body" style="margin-top: 2%;">
            <div class="table-responsive">
                <div class="table-responsive">
                    <table class="table table-bordered table-hover" id="table" style="width: 100%; margin-bottom: 1px; background-color: rgba(0, 0, 0, 0); border: 1px solid black !important; color: #000000 !important; text-indent: initial; border-collapse: collapse; " cellpadding="0">
                        <thead>
                            <tr>
                                <th width="30px" rowspan="2" style="vertical-align: middle; text-align: center !important; border: 1px solid black;">TT</th>
                                <th class="text-center" rowspan="2" width="300px" style="vertical-align: middle; text-align: center !important; border: 1px solid black;">Họ tên</th>
                                <th class="text-center" rowspan="2" width="150px" style="vertical-align: middle; text-align: center !important; border: 1px solid black;">Ngày sinh</th>
                                <th class="text-center" rowspan="2" width="150px" style="vertical-align: middle; text-align: center !important; border: 1px solid black;">CMND/CCCD</th>
                                <th class="text-center" rowspan="2" width="250px" style="vertical-align: middle; text-align: center !important; border: 1px solid black;">Hộ khẩu thường trú</th>
                                <th class="text-center" rowspan="2" width="200px" style="vertical-align: middle; text-align: center !important; border: 1px solid black;">Chức vụ</th>
                                <th class="text-center" rowspan="2" width="200px" style="vertical-align: middle; text-align: center !important; border: 1px solid black;">Số điện thoại</th>
                                <th class="text-center" colspan="5" width="200px" style="vertical-align: middle; text-align: center !important; border: 1px solid black;">Chọn X</th>
                                <th class="text-center" rowspan="2" width="150px" style="vertical-align: middle; text-align: center !important; border: 1px solid black;">Thời hạn thẻ</th>
                                <th class="text-center" rowspan="2" width="200px" style="vertical-align: middle; text-align: center !important; border: 1px solid black;">Khu vực làm việc</th>
                                <th class="text-center" rowspan="2" width="200px" style="vertical-align: middle; text-align: center !important; border: 1px solid black;">Cổng đăng ký ra/vào</th>
                                <th class="text-center" rowspan="2" width="200px" style="vertical-align: middle; text-align: center !important; border: 1px solid black;">Nhóm NT</th>
                                <th class="text-center" rowspan="2" width="200px" style="vertical-align: middle; text-align: center !important; border: 1px solid black;">Ghi chú</th>
                            </tr>
                            <tr>
                                <th width="70px" class="text-center" style="text-align: center !important; border: 1px solid black;">Cấp lại</th>
                                <th width="70px" class="text-center" style="text-align: center !important; border: 1px solid black;">Gia hạn</th>
                                <th width="70px" class="text-center" style="text-align: center !important; border: 1px solid black;">Đổi thông tin lưu trú</th>
                                <th width="70px" class="text-center" style="text-align: center !important; border: 1px solid black;">Bổ sung điện thoai thông minh</th>
                                <th width="70px" class="text-center" style="text-align: center !important; border: 1px solid black;">Bổ sung ra vào Cảng</th>
                            </tr>
                        </thead>
                        <tbody>
                            @{
                                var _Model = from a in db_dk.DK_DetailCardExtend.Where(x => x.IDGHT == Model.IDGHT && x.GhiChu == "")
                                             join cr in db_dk.DK_CardExtend on a.IDGHT equals cr.IDGHT
                                             select new DK_Detail_ListExtendcardNTValidation
                                             {
                                                 IDCTGH = (int)a.IDCTGH,
                                                 HoTen = a.HoTen,
                                                 CCCD = a.CCCD,
                                                 NgaySinh = (DateTime)a.NgaySinh,
                                                 HoKhau = a.HoKhau,
                                                 ChucVu = (int)a.ChucVu,
                                                 SoDienThoai = a.SoDienThoai,
                                                 CapLai = a.CapLai,
                                                 GiaHan = a.GiaHan,
                                                 ThongTinLuuTru = a.ThongTinLuuTru,
                                                 DTTM = a.DTTM,
                                                 RaVaoCang = a.RaVaoCang,
                                                 ThoiHanThe = (DateTime)a.ThoiHanThe,
                                                 KhuVucLamViec = a.KhuVucLamViec,
                                                 Cong = a.Cong,
                                                 NhomNT = (int)a.NhomNT,
                                                 GhiChu = a.GhiChu,
                                                 IDGHT = (int)a.IDGHT,
                                                 TinhTrangID = (int)cr.TinhTrangID
                                             };
                                int RowNo = 1;
                                foreach (var item in _Model)
                                {
                                    <tr>
                                        <td class="text-center" style="padding-left: 5px; border: 1px solid black;"> @RowNo@{RowNo++;}</td>
                                        <td swidth="300px" style="padding-left: 5px; border: 1px solid black;">@item.HoTen</td>
                                        <td style="padding-left: 5px; border: 1px solid black;">@item.NgaySinh.ToString("dd-MM-yyyy")</td>
                                        <td style="padding-left: 5px; border: 1px solid black;">@item.CCCD</td>
                                        <td style="padding-left: 5px; border: 1px solid black;">@item.HoKhau</td>
                                        <td style="padding-left: 5px; border: 1px solid black;">
                                            @{
                                                var IDCV = db.NT_Position.Where(x => x.IDCV == item.ChucVu).FirstOrDefault();
                                            }
                                            @IDCV.TenCV.ToString()
                                        </td>
                                        <td style="padding-left: 5px; border: 1px solid black;">
                                            @item.SoDienThoai
                                        </td>
                                        @if (item.CapLai == "1" || item.CapLai == "X" || item.CapLai == "x")
                                        {
                                            <td style="padding-left: 5px; border: 1px solid black;">X</td>
                                        }
                                        else
                                        {
                                            <td style="padding-left: 5px; border: 1px solid black;"></td>
                                        }

                                        @if (item.GiaHan == "2" || item.GiaHan == "X" || item.GiaHan == "x")
                                        {
                                            <td style="padding-left: 5px; border: 1px solid black;">X</td>
                                        }
                                        else
                                        {
                                            <td style="padding-left: 5px; border: 1px solid black;"></td>
                                        }
                                        @if (item.ThongTinLuuTru == "3" || item.ThongTinLuuTru == "X" || item.ThongTinLuuTru == "x")
                                        {
                                            <td style="padding-left: 5px; border: 1px solid black;">X</td>
                                        }
                                        else
                                        {
                                            <td style="padding-left: 5px; border: 1px solid black;"></td>
                                        }
                                        @if (item.DTTM == "4" || item.DTTM == "X" || item.DTTM == "x")
                                        {
                                            <td style="padding-left: 5px; border: 1px solid black;">X</td>
                                        }
                                        else
                                        {
                                            <td style="padding-left: 5px; border: 1px solid black;"></td>
                                        }
                                        @if (item.RaVaoCang == "4" || item.RaVaoCang == "X" || item.RaVaoCang == "x")
                                        {
                                            <td style="padding-left: 5px; border: 1px solid black;">X</td>
                                        }
                                        else
                                        {
                                            <td style="padding-left: 5px; border: 1px solid black;"></td>
                                        }
                                        <td width="180px" style="padding-left: 5px; border: 1px solid black;">@item.ThoiHanThe.ToString("dd-MM-yyyy")</td>
                                        @{
                                            string ListKhuVuc = "";
                                            string[] arrList = item.KhuVucLamViec.Split(',');
                                            foreach (var ar in arrList)
                                            {
                                                if (ar != "")
                                                {
                                                    int IDKV = Convert.ToInt32(ar);
                                                    var NameKhuVuc = db.NT_Workplace.Where(x => x.IDKV == IDKV).FirstOrDefault();
                                                    ListKhuVuc = String.Concat(NameKhuVuc.TenKV + " , " + ListKhuVuc);
                                                }

                                            }
                                        }
                                        <td style="padding-left: 5px; border: 1px solid black;">
                                            @ListKhuVuc
                                        </td>

                                        @{
                                            string List = "";
                                            string[] arrListStr = item.Cong.Split(',');
                                            foreach (var ar in arrListStr)
                                            {
                                                int IDGate = Convert.ToInt32(ar);
                                                var Cong = db.NT_Gate.Where(x => x.IDGate == IDGate).FirstOrDefault();
                                                List = String.Concat(Cong.Gate + " , " + List);
                                            }
                                        }
                                        <td style="padding-left: 5px; border: 1px solid black;">
                                            @List
                                        </td>
                                        <td style="padding-left: 5px; border: 1px solid black;">
                                            @{
                                                var IDCong = db.NT_ContractorGroup.Where(x => x.IDGroup == item.NhomNT).FirstOrDefault();
                                            }
                                            @IDCong.NameContractorGroup
                                        </td>
                                        <td style="padding-left: 5px; border: 1px solid black;">@item.GhiChu</td>
                                    </tr>
                                }
                            }
                        </tbody>
                    </table>
                </div>


            </div>
        </div>
        @{
            var Get_Day = db_dk.DK_CardExtend.Where(x => x.IDGHT == Model.IDGHT).FirstOrDefault();

            DateTime Date = (DateTime)Get_Day.NgayDangKy;


            var C1 = db_dk.TK_CardExtend.Where(x => x.GHTID == Model.IDGHT && x.CapDuyet == 1).FirstOrDefault();

            var C2 = db_dk.TK_CardExtend.Where(x => x.GHTID == Model.IDGHT && x.CapDuyet == 2).FirstOrDefault();

            var C3 = db_dk.TK_CardExtend.Where(x => x.GHTID == Model.IDGHT && x.CapDuyet == 3).FirstOrDefault();
            var BPQL = db.NhanViens.Where(x => x.ID == C3.NhanVienID).FirstOrDefault();
            var C4 = db_dk.TK_CardExtend.Where(x => x.GHTID == Model.IDGHT && x.CapDuyet == 4).FirstOrDefault();
            var VP1C = db.NhanViens.Where(x => x.ID == C4.NhanVienID).FirstOrDefault();
            <div class="col-md-12 pt-3 pull-right" style="margin-top:0.5%;">
                <label style="font-size: 15px;">
                    Ngày @Date.ToString("dd") tháng @Date.ToString("MM") năm @Date.ToString("yyyy")
                </label>
            </div>
            <table style="width: 100%; margin-bottom: 1px; background-color: rgba(0, 0, 0, 0); ">
                <thead style="display: table-header-group; vertical-align: middle; border-color: inherit;">
                    <tr>
                        <th style="text-align: center !important;" width="25%">VP1C</th>
                        <th style="text-align: center !important;" width="25%">BP liên quan</th>
                        <th style="text-align: center !important;" width="25%">
                            @if (Get_Day.LoaiNT == 1 && C1 != null)
                            {
                                var KTV = db.NhanViens.Where(x => x.ID == C1.NhanVienID).FirstOrDefault();
                                <img style="width: 10%;" src="@Url.Content("~/UploadedFiles/Signature/" + System.IO.Path.GetFileName(KTV.Chukynhay))" />
                            }
                            BP quản lý
                        </th>
                        <th style="text-align: center !important;" width="25%">  Đại diện Nhà thầu</th>
                    </tr>
                </thead>
            </table>

            // chữ ký
            <table style="width: 100%; margin-bottom: 1px; background-color: rgba(0, 0, 0, 0); ">
                <thead style="display: table-header-group; vertical-align: middle; border-color: inherit;">
                    <tr>
                        <th style="text-align: center !important;" width="25%">  <img style="width: 40%; padding-bottom: 5%;" src="@Url.Content("~/UploadedFiles/Signature/" + System.IO.Path.GetFileName(VP1C.Chukychinh))" /></th>
                        @if (Get_Day.LoaiNT == 1)
                        {
                            if (C2 != null)
                            {
                                <th style="text-align: center !important;" width="25%">
                                    @{
                                        var BPLQ = db.NhanViens.Where(x => x.ID == C2.NhanVienID).FirstOrDefault();
                                        <img style="width: 40%; padding-bottom: 5%; " src="@Url.Content("~/UploadedFiles/Signature/" + System.IO.Path.GetFileName(BPLQ.Chukychinh))" />
                                    }
                                </th>
                            }
                            else
                            {
                                <th style="text-align: center !important;" width="25%">
                                </th>
                            }

                            <th style="text-align: center !important;" width="25%">  <img style="width: 40%; padding-bottom: 5%; " src="@Url.Content("~/UploadedFiles/Signature/" + System.IO.Path.GetFileName(BPQL.Chukychinh))" /></th>
                        }
                        else
                        {
                            <th style="text-align: center !important;" width="25%">

                                @{
                                    var KTV = db.NhanViens.Where(x => x.ID == C1.NhanVienID).FirstOrDefault();
                                    <img style="width: 40%; padding-bottom: 5%; " src="@Url.Content("~/UploadedFiles/Signature/" + System.IO.Path.GetFileName(KTV.Chukychinh))" />
                                }
                            </th>
                            <th style="text-align: center !important;" width="25%">

                                <img style="width: 40%; padding-bottom: 5%;" src="@Url.Content("~/UploadedFiles/Signature/" + System.IO.Path.GetFileName(BPQL.Chukychinh))" />
                            </th>
                        }
                        <th style="text-align: center !important;" width="25%">  <img style="width: 40%; padding-bottom: 5%;" src="@Url.Content("~/UploadedFiles/Signature/" + System.IO.Path.GetFileName(IDNVNT.ChuKy))" /></th>
                    </tr>
                </thead>
            </table>

            // họ và tên
            <table style="width: 100%; margin-bottom: 1px; background-color: rgba(0, 0, 0, 0); ">
                <thead style="display: table-header-group; vertical-align: middle; border-color: inherit;">
                    <tr>
                        <th style="text-align: center !important;" width="25%">
                            <b>
                                @VP1C.HoTen
                            </b>
                            @*<img style="width: 40%; padding-bottom: 5%;" src="@Url.Content("~/UploadedFiles/Signature/" + System.IO.Path.GetFileName(VP1C.Chukychinh))" />*@
                        </th>
                        @if (Get_Day.LoaiNT == 1)
                        {
                            if (C2 != null)
                            {
                                <th style="text-align: center !important;" width="25%">
                                    @{
                                        var BPLQ = db.NhanViens.Where(x => x.ID == C2.NhanVienID).FirstOrDefault();
                                        <b>
                                            @BPLQ.HoTen
                                        </b>
                                        @*<img style="width: 40%; padding-bottom: 5%;" src="@Url.Content("~/UploadedFiles/Signature/" + System.IO.Path.GetFileName(BPLQ.Chukychinh))" />*@
                                    }
                                </th>
                            }
                            else
                            {
                                <th style="text-align: center !important;" width="25%">
                                </th>
                            }
                            <th style="text-align: center !important;" width="25%">
                                <b>
                                    @BPQL.HoTen
                                </b>
                                @*<img style="width: 40%; margin: 0% 0% 0% 5%; " src="@Url.Content("~/UploadedFiles/Signature/" + System.IO.Path.GetFileName(BPQL.Chukychinh))" />*@
                            </th>
                        }
                        else
                        {
                            <th style="text-align: center !important;" width="25%">
                                @{
                                    var KTV = db.NhanViens.Where(x => x.ID == C1.NhanVienID).FirstOrDefault();
                                    <b>
                                        @KTV.HoTen
                                    </b>
                                    @*<img style="width: 40%; padding-bottom: 5%;" src="@Url.Content("~/UploadedFiles/Signature/" + System.IO.Path.GetFileName(KTV.Chukychinh))" />*@
                                }
                            </th>
                            <th style="text-align: center !important;" width="25%">
                                <b>
                                    @BPQL.HoTen
                                </b>
                                @*<img style="width: 40%; padding-bottom: 5%;" src="@Url.Content("~/UploadedFiles/Signature/" + System.IO.Path.GetFileName(BPQL.Chukychinh))" />*@
                            </th>
                        }
                        <th style="text-align: center !important;" width="25%">
                            @*<img style="width: 40%; padding-bottom: 5%;" src="@Url.Content("~/UploadedFiles/Signature/" + System.IO.Path.GetFileName(IDNVNT.ChuKy))" />*@
                        </th>
                    </tr>
                </thead>
            </table>
        }

        <div class="col-md-12 pt-5" style="width:100%">
            <div style="margin-left:2%;">
                <p>
                    <b>
                        Lưu ý:
                    </b><br />
                    1. Phân nhóm NT: Theo PL.04/QT.20 <br />
                    2. BP quản lý phải là T/PBP hoặc người được ủy quyền. Nhà thầu phải là BGĐ hoặc người được Ủy quyền (tối thiểu cấp Chỉ huy trưởng/phó) ký tên đóng dấu.<br />
                    3. Cổng ra/vào và cung đường di chuyển của  nhà thầu theo Quy định của Công ty ban hành áp dụng, được dán niêm yết tại các cổng.<br />
                    4. CBNV NT có nhu cầu đăng ký ra vào Cảng thường xuyên cần trình ký đến BP.Cảng."

                </p>
            </div>
        </div>
    </div>


</div>



