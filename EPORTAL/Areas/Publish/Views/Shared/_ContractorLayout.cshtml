<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta http-equiv="Content-Language" content="en">
    <meta http-equiv="Content-Type" content="text/html; charset=utf-8" />
    <title>HÒA PHÁT DUNG QUẤT</title>
    <meta name="viewport" content="width=device-width, initial-scale=1, maximum-scale=1, user-scalable=no, shrink-to-fit=no" />
    <meta name="description" content="This is an example dashboard created using build-in elements and components.">
    <meta name="msapplication-tap-highlight" content="no">
    <link href="~/Areas/Publish/Content/main.css" rel="stylesheet" />
    <script src="~/Areas/Publish/Content/assets/plotly-latest.min.js"></script>
    <script src="~/Areas/Publish/Content/jquery-3.0.0.min.js"></script>
    <script src="~/Areas/Publish/Content/bootstrap.min.js"></script>
    <script src="//cdn.ckeditor.com/4.19.0/full/ckeditor.js"></script>
    <link href="~/Areas/Publish/Content/assets/font-awesome/css/font-awesome.min.css" rel="stylesheet" />
    <script src="https://cdn.jwplayer.com/libraries/HV0iiS3W.js"></script>



</head>
<body>
    @{
        if (!User.Identity.IsAuthenticated)
        {
            Response.Redirect("~/Login");
        }
    }
    <div class="app-container app-theme-white body-tabs-shadow fixed-sidebar fixed-header">
        <div class="app-header header-shadow">
            <div class="app-header__logo">
                <div class="">
                    <a class="navbar-brand" href="@Url.Action("Index","HomePage")">
                        <img src="~/Content/assets/images/LogoHPDQ.svg" alt="" height="35">
                    </a>
                </div>
                <div class="header__pane ml-auto">
 
                </div>
            </div>
            <div class="app-header__mobile-menu">
                <div>
                    <button type="button" class="hamburger hamburger--elastic mobile-toggle-nav">
                        <span class="hamburger-box">
                            <span class="hamburger-inner"></span>
                        </span>
                    </button>
                </div>
            </div>
            <div class="app-header__menu">
                <span>
                    <button type="button" class="btn-icon btn-icon-only btn btn-primary btn-sm mobile-toggle-header-nav">
                        <span class="btn-icon-wrapper">
                            <i class="fa fa-ellipsis-v fa-w-6"></i>
                        </span>
                    </button>
                </span>
            </div>
            <div class="app-header__content">
                <div class="header-slogan">
                    <div class="widget-content">
                        <div class="slogan">
                            Đối Tác Hòa Phát Dung Quất
                        </div>
                    </div>
                </div>
                <div class="app-header-right">
                    <div class="header-btn-lg pr-0">
                        <div class="widget-content p-0">
                            <div class="widget-content-wrapper">
                                <div class="widget-content-left">
                                    <div class="btn-group">
                                        <a data-toggle="dropdown" aria-haspopup="true" aria-expanded="false" class="p-0 btn">
                                            <img width="42" class="rounded-circle" src="~/Content/assets/images/avatars/adminlogo.jpg" alt="">
                                            <i class="fa fa-angle-down ml-2 opacity-8"></i>
                                        </a>
                                        <div tabindex="-1" role="menu" aria-hidden="true" class="dropdown-menu dropdown-menu-right">
                                            <a class="dropdown-item" href="@Url.Action("Logout","LoginDBDT")">Đăng xuất</a>
                                            <a class="dropdown-item" href="@Url.Action("ChangePassword","LoginDBDT")">Đổi mật khẩu</a>
                                            @*<button type="button" tabindex="0" class="dropdown-item">Đăng xuất</button>*@
                                            @*<button type="button" tabindex="0" class="dropdown-item">Settings</button>*@

                                        </div>
                                    </div>
                                </div>
                                <div class="widget-content-left  ml-3 header-user-info">
                                    <div class="widget-heading">
                                        @EPORTAL.ModelsDanhBaDoiTac.MyAuthentication2.ShortName
                                    </div>
                                    <div class="widget-subheading">
                                        @*PNS*@
                                    </div>
                                </div>
                                <div class="widget-content-right header-user-info ml-3">

                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        @RenderBody();
    
    </div>
    <script type="text/javascript" src="~/Areas/Publish/Content/assets/scripts/main.js"></script>



</body>
</html>

