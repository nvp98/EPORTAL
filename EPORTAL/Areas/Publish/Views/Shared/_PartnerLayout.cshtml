    <div class="main_wrap">
        <nav class="navbar navbar-expand-lg navbar-light">
            <div class="container-fluid">
                <a class="navbar-brand" href="#">
                    <img src="~/Content/assets/images/LogoHPDQ.svg" alt="" height="35">
