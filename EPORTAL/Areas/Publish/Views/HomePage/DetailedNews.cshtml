<body>
    <div class="content-single">
        <div class="container">
            <div class="row">
                @{
                    DanhBaDoiTacEntities db_context = new DanhBaDoiTacEntities();
                    int id = Convert.ToInt32(@Url.RequestContext.RouteData.Values["id"]);
                    var res = from l in db_context.DB_TinTuc
                              where l.IDTintuc == id
                              select new ManageNewsValidation()
                              {
                                  IDTinTuc = l.IDTintuc,

                                  TenDeTai = l.TenDeTai,
                                  TomTatTinTuc = l.TomTatTinTuc,
                                  NoiDungTinTuc = l.NoiDungTinTuc,
                                  ImageTinTuc = l.ImageTinTuc,
                                  NgayDangTin = (DateTime)l.NgayDangTin,
                                  NguoiDangTin = l.NguoiDangTin

                              };
                }
                @foreach (var item in Model)
                {
                    <div class="show-content-detail">
                        <h1 class="title-detail-post"></h1>

                        @Html.Raw(@item.NoiDungTinTuc)

                        <p style="text-align: right"><strong><span style="font-size: 14pt">@item.NguoiDangTin</span></strong></p>
                    </div>
                }
            </div>

            <div class="content-single">
                <div class="content">
                    <div class="row">


                        <h1 class="title-vacancies"><i class="fa fa-briefcase" aria-hidden="true"></i> Các tin khác</h1>
                        @{

                            int idd = Convert.ToInt32(@Url.RequestContext.RouteData.Values["id"]);
                            var ress = (from l in db_context.DB_TinTuc
                                        select new ManageNewsValidation()
                                        {
                                            IDTinTuc = l.IDTintuc,

                                            TenDeTai = l.TenDeTai,
                                            TomTatTinTuc = l.TomTatTinTuc,
                                            NoiDungTinTuc = l.NoiDungTinTuc,
                                            ImageTinTuc = l.ImageTinTuc,
                                            NgayDangTin = (DateTime)l.NgayDangTin,
                                            NguoiDangTin = l.NguoiDangTin

                                        }).OrderByDescending(x => x.IDTinTuc).Where(x => x.IDTinTuc != idd).Take(6).ToList();


                        }
                        @foreach (var item in ress)
                        {

                            <div class="col-md-4">
                                <div class="show-content-post">

                                    <a class="images" href="@Url.Action("DetailedNews", "HomePage", new { id = item.IDTinTuc })">
                                        <img width="950" height="660" src="@Url.Content("~/UploadedFiles/News/" + System.IO.Path.GetFileName(item.ImageTinTuc))" class="attachment-post-thumbnail size-post-thumbnail wp-post-image" alt="" />
                                    </a>
                                    <h1 class="title-post"><a href="@Url.Action("DetailedNews","HomePage", new { id = item.IDTinTuc})">@item.TenDeTai</a></h1>
                                    <span class="excerpt">
                                        <a href="@Url.Action("DetailedNews","HomePage", new { id = item.IDTinTuc})">
                                            @item.TenDeTai
                                        </a>

                                        @item.TomTatTinTuc
                                    </span>
                                </div>
                            </div>
                        }

                    </div>
                </div>

            </div>
        </div>
    </div>



</body>
