
@{
    ViewBag.Title = "Index";
    Layout = "~/Areas/Publish/Views/Shared/_InternalLayout2.cshtml";
}

@using EPORTAL.ModelsDanhBaDoiTac
@model PagedList.IPagedList<ManagePartnerValidation>
@using PagedList.Mvc

<link href="~/Content/assets/css/PagedList.css" rel="stylesheet" />
<link rel="stylesheet" href="~/Layout/css/style_home.css" />


<link rel="stylesheet" href="~/Layout/css/reset.css" />
@if (TempData["msgSuccess"] != null)
{
    @Html.Raw(TempData["msgSuccess"])
}
@if (TempData["msgError"] != null)
{
    @Html.Raw(TempData["msgError"])
}






<div class="d_content s_main-content">


    <div class="card-body">

        <ul class="nav nav-tabs" id="myTab" role="tablist">
            <li class="nav-item">
                <a class="nav-link active" id="home-tab" data-toggle="tab" href="#home" role="tab" aria-controls="home" aria-selected="true">Thông tin</a>
            </li>

        </ul>

        @*style tabcontent*@

        <div class="tab-content" id="myTabContent" style="border-left: 1px solid #ddd; border-right: 1px solid #ddd; border-bottom: 1px solid #ddd; ">
            @foreach (var item in Model)
            {
                @*infor*@
                <div class="tab-pane fade in show active" id="home" role="tabpanel">

                    <div class="row justify-content-center" style="padding: 2rem 0; color: black;">
                        <div class="col-lg-10 col-xl-10">

                            <div class="row justify-content-center" style="">

                                <div class="col-md-4 col-8" style=" height: 180px; align-items: center;">

                                    <img src="@item.ImageLogo" class="d-block w-70 justify-content-center" alt="..." style="width:251px; height:183px; border: 1px solid black; text-align:center">

                                </div>


                                @*<div class="col-md-1">

                                    </div>*@


                                <div class="col-md-8 col-8" style="">

                                    <div class="row" style="padding-top: 12px; margin-left:10px">

                                        <div class="col-md-8 col-8">
                                            <h4 style="border-left: solid #dc3545; margin-left: -16px; padding-left: 10px; color: black; font-weight: bold; font-size:18px">TỔNG QUAN</h4>
                                        </div>
                                        @*<div class="col-md-8 col-8">
                                                <hr />
                                            </div>*@
                                    </div>



                                    <div class="row" style="margin-left:10px; margin-top: 10px">
                                        <div class="col-md-4 col-8">
                                            <p style="font-weight:bold;">Tên Ngắn :</p>
                                        </div>
                                        <div class="col-md-8 col-4">
                                            <p>@item.ShortName</p>
                                        </div>

                                    </div>

                                    <div class="row" style="margin-left: 10px; margin-top: 10px">
                                        <div class="col-md-4 col-8">
                                            <p style="font-weight:bold;">Tên Đầy Đủ :</p>
                                        </div>
                                        <div class="col-md-8 col-4">
                                            <p>@item.FullName</p>
                                        </div>
                                    </div>





                                    <div class="row" style="margin-left: 10px; margin-top: 10px">
                                        <div class="col-md-4 col-8">
                                            <p style="font-weight:bold;">Lĩnh vực hoạt động :</p>
                                        </div>
                                        <div class="col-md-8 col-4">
                                            <p>@item.TenLVHĐ</p>
                                        </div>
                                    </div>

                                </div>

                            </div>


                            <div class="form-floating mb-3" style="margin-left:10px">
                                <h5 style="margin-top: 2%;color: black;font-weight: bold;"> @item.FullName </h5>
                                <hr />
                            </div>


                            <div class="form-floating mb-3" style="display: flex;  margin-left:15px">

                                <div class="width" style="width: 50%;">
                                    <i class="bi bi-activity"></i>
                                    <i class="fa fa-id-card" aria-hidden="true"></i>&nbsp;
                                    <b style="font-weight:bold">Tên Ngắn</b>
                                </div>

                                <span>@item.ShortName</span>

                            </div>
                            <hr />


                            <div class="form-floating mb-3" style="display: flex; margin-left: 15px">

                                <div class="width" style="width: 50%; ">
                                    <i class="fa fa-credit-card" aria-hidden="true"></i>&nbsp;
                                    <b style="font-weight:bold">Mã số thuế</b>
                                </div>

                                <span>@item.TaxCode</span>

                            </div>
                            <hr />

                            <div class="form-floating mb-3" style="display: flex; margin-left: 15px">

                                <div class="width" style="width: 50%; ">
                                    <i class="fa fa-map-marker" aria-hidden="true"></i>&nbsp;
                                    <b style="font-weight:bold">Tên địa chỉ</b>
                                </div>

                                <span>@item.Address</span>

                            </div>
                            <hr />

                            <div class="form-floating mb-3" style="display: flex; margin-left: 15px">
                                <div class="width" style="width: 50%; ">
                                    <i class="fa fa-users" aria-hidden="true"></i>&nbsp;
                                    <b style="font-weight:bold">Customer</b>
                                </div>

                                <span>
                                    @item.Customer
                                </span>

                            </div>
                            <hr />

                            <div class="form-floating mb-3" style="display: flex; margin-left: 15px">
                                <div class="width" style="width: 50%; ">
                                    <i class="fa fa-phone" aria-hidden="true"></i>&nbsp;
                                    <b style="font-weight:bold">Vender</b>
                                </div>

                                <span>@item.Vender</span>

                            </div>
                            <hr />

                            <div class="form-floating mb-3" style="display: flex; margin-left: 15px">
                                <div class="width" style="width: 50%; ">
                                    <i class="fa fa-calendar-check-o" aria-hidden="true"></i>&nbsp;
                                    <b style="font-weight:bold">Email</b>
                                </div>

                                <span>@item.Email</span>

                            </div>
                            <hr />



                            @*<div>
                                    <span style="padding-right:63%;">Cập nhật lần cuối vào <b>02/03/2022</b>. Bạn muốn cập nhật thông tin mới nhất</span>

                                    <button class="btn btn-primary btn-xl disabled" id="submitButton" type="submit">Cập nhật</button>
                                </div>*@


                            <div class="form-floating mb-3" ; style="margin-left:15px">
                                <h5 style="margin-top: 2%;color: black;font-weight: bold;"> @item.FullName </h5>

                            </div>

                        </div>
                    </div>

                </div>
            }


            @* notify *@


            @* complaint *@
            <div class="tab-pane fade" id="contact" role="tabpanel">
                <div class="row justify-content-center" style="padding: 2rem 0; color: black;">
                    <div class="col-lg-10 col-xl-10">
                        khiếu nại
                    </div>
                </div>
            </div>
        </div>


    </div>


</div>



