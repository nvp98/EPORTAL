@using EPORTAL.ModelsDanhBaDoiTac
@model EPORTAL.ModelsDanhBaDoiTac.ManagePartnerValidation
@{ 
    DanhBaDoiTacEntities db_context = new DanhBaDoiTacEntities();
}
@using (Html.BeginForm("Create", "ManagePartner", FormMethod.Post, new { enctype = "multipart/form-data" }))
{
    @Html.AntiForgeryToken()
    <div class="modal-dialog" id="form">
        <div class="modal-content">
            <div class="modal-header">
                <h5 id="ModalTitle"></h5>
                <a href="#" class="close" data-dismiss="modal">&times;</a>
            </div>
            <div class="modal-body">


                @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                <fieldset id="SubmitForm">
                    <div class="row">

                        <div class="col-md-6">
                            <div class="form-group">
                                <label class="small mb-1">Mã Đối Tác</label>
                                @Html.EditorFor(model => model.IDBP, new { htmlAttributes = new { @class = "form-control", placeholder = "Mã Đối Tác", @id = "IDBP" } })
                                @Html.ValidationMessageFor(model => model.IDBP, "", new { @class = "text-danger" })

                            </div>
                        </div>

                        <div class="col-md-6">
                            <div class="form-group">
                                <label class="small mb-1">Loại Đối Tác</label>
                                @Html.DropDownList("LoaiIDDT", null, "", new { id = "LoaiIDDT", @class = "form-control", style = "width:100%", multiple = "multiple", placeholder = "Chọn loại đối tác" })

                            </div>
                        </div>
                       
                        <div class="col-md-6">
                            <div class="form-group">
                                <label class="small mb-1">Lĩnh Vực</label>
                                @Html.DropDownList("LVHDList", null, "", new { id = "LVHDList", @class = "form-control", style = "width:100%", multiple = "multiple", placeholder = "Chọn lĩnh vực hoạt động" })

                            </div>
                        </div>

                        <div class="col-md-6">
                            <div class="form-group">
                                <label class="small mb-1">Tên Ngắn</label>
                                @Html.EditorFor(model => model.ShortName, new { htmlAttributes = new { @class = "form-control", placeholder = "Tên Ngắn", @id = "ShortName" } })
                                @Html.ValidationMessageFor(model => model.ShortName, "", new { @class = "text-danger" })

                            </div>
                        </div>

                        <div class="col-md-6">
                            <div class="form-group">
                                <label class="small mb-1">Tên Đầy Đủ</label>
                                @Html.EditorFor(model => model.FullName, new { htmlAttributes = new { @class = "form-control", placeholder = "Tên Đầy Đủ", @id = "FullName" } })
                                @Html.ValidationMessageFor(model => model.FullName, "", new { @class = "text-danger" })

                            </div>
                        </div>

                        <div class="col-md-6">
                            <div class="form-group">
                                <label class="small mb-1">Mã Số Thuế</label>
                                @Html.EditorFor(model => model.TaxCode, new { htmlAttributes = new { @class = "form-control", placeholder = "Mã Số Thuế", @id = "TaxCode" } })
                                @Html.ValidationMessageFor(model => model.TaxCode, "", new { @class = "text-danger" })

                            </div>
                        </div>

                        <div class="col-md-6">
                            <div class="form-group">
                                <label class="small mb-1">Địa Chỉ</label>
                                @Html.EditorFor(model => model.Address, new { htmlAttributes = new { @class = "form-control", placeholder = "Địa Chỉ", @id = "Address" } })
                                @Html.ValidationMessageFor(model => model.Address, "", new { @class = "text-danger" })

                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="form-group">
                                <label class="small mb-1">Thành Phố</label>
                                @Html.DropDownListFor(model => model.City, ViewBag.DCList as SelectList, new { @id = "IDDiaChi", placeholder = "Thành Phố", @class = "form-control" })

                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="form-group">
                                <label class="small mb-1">Miền</label>
                                @Html.DropDownListFor(model => model.Regions, ViewBag.MList as SelectList, new { @id = "IDDiaChi", placeholder = "Miền", @class = "form-control" })

                            </div>
                        </div>



                        <div class="col-md-6">
                            <div class="form-group">
                                <div class="row">
                                    <label class="small mb-1">Logo</label>

                                    @*@Html.EditorFor(model => model.ImagePath, new { htmlAttributes = new { @class = "form-control", placeholder = "", @id = "ImagePath", @readonly = "true" } })*@
                                    <div class="col-md-12">
                                        <input type="file" name="ImageFile" style="width:100%;" />
                                    </div>
                                </div>
                            </div>
                        </div>

                        <div class="col-md-6">
                            <div class="form-group">
                                <label class="small mb-1">Customer</label>
                                @Html.EditorFor(model => model.Customer, new { htmlAttributes = new { @class = "form-control", placeholder = "Customer", @id = "Customer" } })
                                @Html.ValidationMessageFor(model => model.Customer, "", new { @class = "text-danger" })

                            </div>
                        </div>

                        <div class="col-md-6">
                            <div class="form-group">
                                <label class="small mb-1">Vender</label>
                                @Html.EditorFor(model => model.Vender, new { htmlAttributes = new { @class = "form-control", placeholder = "Vender", @id = "Vender" } })
                                @Html.ValidationMessageFor(model => model.Vender, "", new { @class = "text-danger" })

                            </div>
                        </div>

                        @*<div class="col-md-6">
            <div class="form-group">
                <label class="small mb-1">Logo</label>
                @Html.EditorFor(model => model.ImageLogo, new { htmlAttributes = new { @class = "form-control", placeholder = "Logo", @id = "Logo" } })
                @Html.ValidationMessageFor(model => model.ImageLogo, "", new { @class = "text-danger" })
            </div>
        </div>*@


                        <div class="col-md-6">
                            <div class="form-group">
                                <label class="small mb-1">Email</label>
                                @Html.EditorFor(model => model.Email, new { htmlAttributes = new { @class = "form-control", placeholder = "Email", @id = "Email" } })
                                @Html.ValidationMessageFor(model => model.Email, "", new { @class = "text-danger" })
                            </div>
                        </div>



                    </div>

                    <div class="btn-margin-top text-center">
                        <input type="submit" value="Xác nhận" class="btn btn-success button_submit" />

                    </div>
                </fieldset>

            </div>
        </div>
    </div>
}


<script>
    $(function () {
        $("#LVHDList").chosen({
            width: "100%"
        });
    });
    $("#LVHDList").val("Chọn lĩnh vực hoạt động");
    $(function () {
        $("#LoaiIDDT").chosen({
            width: "100%"
        });
    });
    $("#LoaiIDDT").val("Chọn lĩnh vực hoạt động");
</script>

