@model EPORTAL.ModelsPartner.CardMobilityValidation
<script src="@Url.Content("~/Scripts/jquery.validate.min.js")" type="text/javascript"></script>
<script src="@Url.Content("~/Scripts/jquery.validate.unobtrusive.min.js")" type="text/javascript"></script>

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    <div class="modal-dialog" id="formF">
        <div class="modal-content">
            <div class="modal-header">
                <h5 id="ModalTitle"></h5>
                <a href="#" class="close" data-dismiss="modal">&times;</a>
            </div>
            <div class="modal-body">

                @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                <fieldset id="SubmitForm">
                    <div class="row">
                        <div class="form-group col-md-12 ">
                            <label class="mb-1">Nhân viên nhà thầu</label>
                            @Html.DropDownList("IDNVNT", null, "----- Chọn nhân viên nhà thầu -----", new { id = "IDNVNT", @class = "form-control", placeholder = "Hãng xe" })
                            @Html.ValidationMessageFor(model => model.IDNVNT, "", new { @class = "text-danger" })
                        </div>
                        <div class="form-group col-md-12 ">
                            <label class="mb-1">Nhà thầu</label>
                            @Html.DropDownList("ID", null, "----- Chọn nhà thầu -----", new { id = "ID", @class = "form-control", placeholder = "Hãng xe" })
                            @Html.ValidationMessageFor(model => model.ID, "", new { @class = "text-danger" })
                        </div>
                        <div class="form-group col-md-6">
                            <label class="mb-1">Loại phương tiện</label>
                            @Html.TextAreaFor(model => model.LoaiPT, new { @class = "form-control", @rows = 1, placeholder = "Loại phương tiện", @id = "LoaiPT", })
                            @Html.ValidationMessageFor(model => model.LoaiPT, "", new { @class = "text-danger" })
                        </div>
                        <div class="form-group col-md-6">
                            <label class="mb-1">Hãng xe</label>
                            @Html.TextAreaFor(model => model.Hangxe, new { @class = "form-control", @rows = 1, placeholder = "Hãng xe", @id = "Hangxe", })
                            @Html.ValidationMessageFor(model => model.Hangxe, "", new { @class = "text-danger" })
                        </div>
                        <div class="form-group col-md-6">
                            <label class="mb-1">Dòng xe</label>
                            @Html.TextAreaFor(model => model.Dongxe, new { @class = "form-control", @rows = 1, placeholder = "Dòng xe", @id = "Dongxe", })
                            @Html.ValidationMessageFor(model => model.Dongxe, "", new { @class = "text-danger" })
                        </div>
                        <div class="form-group col-md-6">
                            <label class="mb-1">Màu sắc</label>
                            @Html.TextAreaFor(model => model.Mausac, new { @class = "form-control", @rows = 1, placeholder = "Màu sắc", @id = "Mausac", })
                            @Html.ValidationMessageFor(model => model.Mausac, "", new { @class = "text-danger" })
                        </div>
                        <div class="form-group col-md-6">
                            <label class="mb-1">Biển kiểm soát</label>
                            @Html.TextAreaFor(model => model.Bienso, new { @class = "form-control", @rows = 1, placeholder = "Biển kiểm soát", @id = "Bienso", })
                            @Html.ValidationMessageFor(model => model.Bienso, "", new { @class = "text-danger" })
                        </div>
                        <div class="form-group col-md-6">
                            <label class="mb-1">Số thẻ</label>
                            @Html.TextAreaFor(model => model.Sothe, new { @class = "form-control", @rows = 1, placeholder = "Số thẻ", @id = "Sothe", })
                            @Html.ValidationMessageFor(model => model.Sothe, "", new { @class = "text-danger" })
                        </div>
                        <div class="form-group col-md-6">
                            <label class="mb-1">Từ ngày</label>
                            @Html.TextBox("Tungay", null, new { @id = "Tungay", @type = "date", @class = "form-control" })
                            @Html.ValidationMessageFor(model => model.Tungay, "", new { @class = "text-danger" })
                        </div>
                        <div class="form-group col-md-6">
                            <label class="mb-1">Đến ngày</label>
                            @Html.TextBox("Denngay", null, new { @id = "Denngay", @type = "date", @class = "form-control" })
                            @Html.ValidationMessageFor(model => model.Denngay, "", new { @class = "text-danger" })
                        </div>
                        <div class="form-group col-md-12 ">
                            <label class="mb-1">Tình trạng</label>
                            @Html.DropDownList("IDHD", null, "----- Chọn trạng thái thẻ -----", new { id = "IDHD", @class = "form-control", })
                            @Html.ValidationMessageFor(model => model.IDHD, "", new { @class = "text-danger" })
                        </div>
                    </div>

                    <div class="btn-margin-top text-center">
                        <input type="submit" value="Xác nhận" class="btn btn-primary pull-right" />
                        <input type="reset" value="Hủy" class="btn btn-danger pull-right button_cancel mr-1" data-dismiss="modal" />
                    </div>
                </fieldset>

            </div>
        </div>
    </div>

}


<script>
    $("#IDHD").chosen({
        width: "100%"
    });
    $("#IDNVNT").chosen({
        width: "100%"
    });
    $("#ID").chosen({
        width: "100%"
    });
</script>






