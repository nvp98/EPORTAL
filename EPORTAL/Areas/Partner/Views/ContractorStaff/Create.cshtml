@model EPORTAL.ModelsPartner.ContractorStaffValidation
@*<script src="~/Content/assets/Chonse/chosen.jquery.js"></script>
    <link href="~/Content/assets/Chonse/chosen.css" rel="stylesheet" />*@
<script src="@Url.Content("~/Scripts/jquery.validate.min.js")" type="text/javascript"></script>
<script src="@Url.Content("~/Scripts/jquery.validate.unobtrusive.min.js")" type="text/javascript"></script>

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    <div class="modal-dialog" id="formF">
        <div class="modal-content">
            <div class="modal-header">
                <h5 id="ModalTitle"></h5>
                <a href="#" class="close" data-dismiss="modal">&times;</a>
            </div>
            <div class="modal-body">

                @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                <fieldset id="SubmitForm">
                    <div class="row">
                        <div class="form-group col-md-12 ">
                            <label class="mb-1">Họ Tên</label>
                            @Html.TextAreaFor(model => model.HoTen, new { @class = "form-control", @rows = 1, placeholder = "Họ Tên", @id = "HoTen", })
                            @Html.ValidationMessageFor(model => model.HoTen, "", new { @class = "text-danger" })
                        </div>
                        <div class="form-group col-md-6">
                            <label class="mb-1">CCCD</label>
                            @Html.TextAreaFor(model => model.CCCD, new { @class = "form-control", @rows = 1, placeholder = "CCCD", @id = "CCCD", })
                            @Html.ValidationMessageFor(model => model.CCCD, "", new { @class = "text-danger" })
                        </div>
                        <div class="form-group col-md-6 ">
                            <label class="mb-1">CMMD</label>
                            @Html.TextAreaFor(model => model.CMND, new { @class = "form-control", @rows = 1, placeholder = "CCCD", @id = "CMND", })
                            @Html.ValidationMessageFor(model => model.CMND, "", new { @class = "text-danger" })
                        </div>
                        <div class="form-group col-md-12 ">
                            <label class="mb-1">Nhà thầu</label>
                            @Html.DropDownList("ID", null, new { id = "ID", @class = "form-control", })
                            @Html.ValidationMessageFor(model => model.ID, "", new { @class = "text-danger" })
                        </div>
                        <div class="form-group col-md-6">
                            <label class="mb-1">Ngày cấp</label>
                            @Html.TextBox("NgayCap", null, new { @id = "NgayCap", @type = "date", @class = "form-control" })
                            @Html.ValidationMessageFor(model => model.NgayCap, "", new { @class = "text-danger" })
                        </div>
                        <div class="form-group col-md-6">
                            <label class="mb-1">Hạn sử dụng</label>
                            @Html.TextBox("HanSuDung", null, new { @id = "HanSuDung", @type = "date", @class = "form-control" })
                            @Html.ValidationMessageFor(model => model.HanSuDung, "", new { @class = "text-danger" })
                        </div>
                        <div class="form-group col-md-12 ">
                            <label class="mb-1">Số thẻ</label>
                            @Html.TextAreaFor(model => model.SoThe, new { @class = "form-control", @rows = 1, placeholder = "Số thẻ", @id = "SoThe", })
                            @Html.ValidationMessageFor(model => model.SoThe, "", new { @class = "text-danger" })
                        </div>
                        <div class="form-group col-md-12 ">
                            <label class="mb-1">Chức vụ</label>
                            @Html.DropDownList("IDCV", null, new { id = "IDCV", @class = "form-control", })
                            @Html.ValidationMessageFor(model => model.ChucVuID, "", new { @class = "text-danger" })
                        </div>
                        <div class="form-group col-md-12 ">
                            <label class="mb-1">Tình trạng</label>
                            @Html.DropDownList("IDHD", null, new { id = "IDHD", @class = "form-control", })
                            @Html.ValidationMessageFor(model => model.IDHD, "", new { @class = "text-danger" })
                        </div>
                    </div>

                    <div class="btn-margin-top text-center">
                        <input type="submit" value="Xác nhận" class="btn btn-primary pull-right" />
                        <input type="reset" value="Hủy" class="btn btn-danger pull-right button_cancel mr-1" data-dismiss="modal" />
                    </div>
                </fieldset>

            </div>
        </div>
    </div>

}


<script>
    $("#IDHD").chosen({
        width: "100%"
    });
    $("#ID").chosen({
        width: "100%"
    });
</script>





