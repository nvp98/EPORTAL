@model EPORTAL.ModelsPartner.ContractorStaffValidation

@using (Html.BeginForm("UpdateDay", "ContractorStaff", FormMethod.Post, new { enctype = "multipart/form-data", onsubmit = "submitForm(event)" }))
{
    @Html.AntiForgeryToken()
    @Html.HiddenFor(model => model.IDNVNT)
    <div class="modal-dialog" id="form" style="margin-top:7%;">
        <div class="modal-content">
            <div class="modal-header">
                <h5 id="ModalTitle"></h5>
                <a href="#" class="close" data-dismiss="modal">&times;</a>
            </div>
            <div class="modal-body">
                <fieldset id="SubmitForm">
                    <div class="row">

                        <div class="col-md-12">
                            <div class="form-group">
                                <label class="small mb-1">Họ và tên</label>
                                @Html.EditorFor(model => model.HoTen, new { htmlAttributes = new { @class = "form-control", @readonly = "readonly", @id = "FullName", @text = "" } })
                                <span id="ErrorFullName" style="color: red; text-transform: none; font-weight: normal "></span>
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="form-group">
                                <label class="small mb-1">CCCD</label>
                                @Html.EditorFor(model => model.CCCD, new { htmlAttributes = new { @class = "form-control", @readonly = "readonly", @id = "CCCD", @text = "" } })
                                <span id="ErrorCCCD" style="color: red; text-transform: none; font-weight: normal "></span>
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="form-group">
                                <label class="small mb-1">Số thẻ</label>
                                @Html.EditorFor(model => model.SoThe, new { htmlAttributes = new { @class = "form-control", @readonly = "readonly", @id = "Email", @text = "", @onchange = "ValidateEmail();" } })
                                <span id="ErrorMail" style="color: red; text-transform: none; font-weight: normal"></span>
                            </div>
                        </div>
                        <div class="col-md-12">
                            <div class="form-group">
                                <label class="small mb-1">Tên nhà thầu</label>
                                @Html.DropDownList("ContractorsID", null, new { id = "ContractorsID", @class = "form-control", @readonly = "readonly" })
                                @Html.ValidationMessageFor(model => model.IDNT, "", new { @class = "text-danger", @readonly = "readonly" })
                                <span id="ErrorBPID" style="color: red; text-transform: none; font-weight: normal "></span>
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="form-group">
                                <label class="small mb-1">Ngày bắt đầu</label>
                                @Html.EditorFor(model => model.NgayCap, new { htmlAttributes = new { @class = "form-control", placeholder = "", @id = "Date", @type = "date", @Value = ViewBag.NgayCap } })
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="form-group">
                                <label class="small mb-1">Ngày kết thúc</label>
                                @Html.EditorFor(model => model.HanSuDung, new { htmlAttributes = new { @class = "form-control", placeholder = "", @id = "Date", @type = "date", @Value = ViewBag.HanSuDung } })
                            </div>
                        </div>
                    </div>
                    <div class="btn-margin-top text-center">

                        <input type="submit" value="Xác nhận" class="btn btn-success pull-right" />

                    </div>

                </fieldset>

            </div>
        </div>
    </div>

}
<script type="text/javascript">
    //$("#ContractorsID").chosen({
    //    width: "100%"
    //});
    function checkfile(sender) {
        var validExts = new Array(".pdf");
        var fileExt = sender.value;
        fileExt = fileExt.substring(fileExt.lastIndexOf('.'));
        if (validExts.indexOf(fileExt) < 0) {
            alert("Vui lòng chọn file Excel: " +
                validExts.toString() + "");
            $('#FileUpload').val() = '';
            return false;
        }
        else { return true; }
    };
</script>




